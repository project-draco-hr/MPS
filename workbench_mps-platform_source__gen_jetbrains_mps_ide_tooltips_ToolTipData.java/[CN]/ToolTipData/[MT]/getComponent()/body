{
  if (myComponent != null) {
    return myComponent;
  }
 else {
    JTextArea text=new JTextArea();
    text.setEditable(false);
    text.setText(myText);
    text.setFont(UIUtil.getLabelFont());
    text.setBorder(new EmptyBorder(0,5,0,5));
    text.setBackground(ToolTip.BACKGROUND_COLOR);
    return text;
  }
}
