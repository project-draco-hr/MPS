{
  getProjectView().changeView(getId());
  myUpdateQueue.queue(new AbstractUpdate(UpdateID.SELECT){
    @Override public void run(){
      if (myRunReadAction) {
        ModelAccess.instance().runReadAction(new Runnable(){
          @Override public void run(){
            doOnPaneActivation();
          }
        }
);
      }
 else {
        doOnPaneActivation();
      }
    }
  }
);
}
