{
  StringBuilder sb=new StringBuilder();
  sb.append(modelRoot.getType());
  sb.append(":");
  sb.append(modelRoot.getContentRoot());
  for (  String kind : modelRoot.getSupportedFileKinds()) {
    sb.append(":");
    sb.append(kind);
    sb.append("=");
    boolean addSC=false;
    for (    String path : modelRoot.getFiles(kind)) {
      if (addSC) {
        sb.append(";");
      }
 else {
        addSC=true;
      }
      sb.append(path);
    }
  }
  return sb.toString();
}
