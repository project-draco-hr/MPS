{
  if (SNodeOperations.getIndexInParent(node) == 0) {
    return true;
  }
  if (SNodeOperations.getIndexInParent(node) > 0) {
    return false;
  }
  return ListSequence.fromList(SNodeOperations.getDescendants(node,"jetbrains.mps.core.xml.structure.XmlDeclaration",false,new String[]{})).isEmpty();
}
