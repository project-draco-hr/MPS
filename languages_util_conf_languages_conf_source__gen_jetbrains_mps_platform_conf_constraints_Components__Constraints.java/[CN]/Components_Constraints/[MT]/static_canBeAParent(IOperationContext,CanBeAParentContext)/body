{
  if (SLinkOperations.findLinkDeclaration("jetbrains.mps.platform.conf.structure.Components","fragment") == _context.getLink()) {
    return (SConceptOperations.isSubConceptOf(_context.getChildConcept(),"jetbrains.mps.platform.conf.structure.Component") || SConceptOperations.isSubConceptOf(_context.getChildConcept(),"jetbrains.mps.platform.conf.structure.IExternalConfigurationFragment"));
  }
  return true;
}
