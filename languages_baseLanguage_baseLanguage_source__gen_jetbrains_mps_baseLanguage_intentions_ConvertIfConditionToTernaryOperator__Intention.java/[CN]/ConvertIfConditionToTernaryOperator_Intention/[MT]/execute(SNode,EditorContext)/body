{
  SNode ternaryOperator=SConceptOperations.createNewNode("jetbrains.mps.baseLanguage.structure.TernaryOperatorExpression",null);
  SLinkOperations.setTarget(ternaryOperator,"condition",SLinkOperations.getTarget(node,"condition",true),true);
  SLinkOperations.setTarget(ternaryOperator,"ifTrue",IntentionUtils.getExpressionFromNode(SLinkOperations.getTarget(node,"ifTrue",true)),true);
  SLinkOperations.setTarget(ternaryOperator,"ifFalse",IntentionUtils.getExpressionFromNode(SLinkOperations.getTarget(node,"ifFalseStatement",true)),true);
  SNodeOperations.replaceWithAnother(node,ternaryOperator);
}
