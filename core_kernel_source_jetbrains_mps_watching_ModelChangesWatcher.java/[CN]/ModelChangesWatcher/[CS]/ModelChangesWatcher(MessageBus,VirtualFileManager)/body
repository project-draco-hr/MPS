{
  myBus=bus;
  myVirtualFileManager=manager;
  myTimer=new Timer(10,null);
  myTimer.setRepeats(false);
  myTimer.stop();
  myTimer.addActionListener(new ActionListener(){
    public void actionPerformed(    ActionEvent e){
synchronized (myLock) {
        if (myReloadSession != null) {
          doReload();
        }
      }
    }
  }
);
}
