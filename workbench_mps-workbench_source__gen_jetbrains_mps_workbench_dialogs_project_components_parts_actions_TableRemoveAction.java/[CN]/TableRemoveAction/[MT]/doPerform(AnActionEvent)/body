{
  int index=myTable.getSelectedRow();
  for (  int i : myTable.getSelectedRows()) {
    if (i < index) {
      index=i;
    }
  }
  doRemove(e);
  int listSize=myTable.getModel().getRowCount();
  if (index >= listSize) {
    index--;
  }
 else   if (index < 0 && listSize > 0) {
    index=0;
  }
  if (index > -1) {
    myTable.getSelectionModel().setSelectionInterval(index,index);
  }
}
