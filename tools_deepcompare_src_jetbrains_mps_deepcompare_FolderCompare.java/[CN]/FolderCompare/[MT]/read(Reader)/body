{
  BufferedReader r=null;
  try {
    r=new BufferedReader(reader);
    StringBuilder result=new StringBuilder();
    String line;
    while ((line=r.readLine()) != null) {
      result.append(line).append("\n");
    }
    return result.toString();
  }
 catch (  IOException e) {
    throw e;
  }
 finally {
    try {
      if (r != null) {
        r.close();
      }
    }
 catch (    IOException e) {
    }
  }
}
