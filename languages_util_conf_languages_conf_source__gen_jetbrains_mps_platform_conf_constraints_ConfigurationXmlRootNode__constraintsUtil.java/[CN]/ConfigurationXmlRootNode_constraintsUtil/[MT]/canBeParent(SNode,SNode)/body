{
  if (SLinkOperations.findLinkDeclaration("jetbrains.mps.platform.conf.structure.ConfigurationXmlRootNode","node") == link) {
    boolean notRoot=!(SConceptOperations.isSubConceptOf(childConcept,"jetbrains.mps.platform.conf.structure.ConfigurationXmlRootNode"));
    boolean config=SConceptOperations.isSubConceptOf(childConcept,"jetbrains.mps.platform.conf.structure.IConfiguration");
    boolean ext=SConceptOperations.isSubConceptOf(childConcept,"jetbrains.mps.platform.conf.structure.IExternalConfigurationFragment");
    return notRoot && (config || ext);
  }
  return true;
}
