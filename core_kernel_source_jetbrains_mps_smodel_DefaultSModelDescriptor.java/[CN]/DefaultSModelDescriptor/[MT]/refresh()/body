{
  ModelAccess.assertLegalWrite();
  if (!isInitialized())   return;
  addListenersFromSModel();
  SModel oldModel=mySModel;
  mySModel=myModelRootManager.refresh(this);
  if (mySModel != oldModel) {
    oldModel.dispose();
  }
  if (!isInitialized())   return;
  if (mySModel != oldModel) {
    addListenersToSModel();
  }
 else {
    clearListeners();
  }
}
