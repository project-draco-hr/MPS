{
  ModelAccess.assertLegalWrite();
  if (newModel == mySModel)   return;
  if (isInitialized()) {
    disposeFastNodeFinder();
    addListenersFromSModel();
    mySModel.dispose();
  }
  mySModel=newModel;
  if (mySModel != null) {
    addListenersToSModel();
  }
  SModelRepository.getInstance().markChanged(this,true);
}
