{
  ModelAccess.instance().runReadAction(new Runnable(){
    public void run(){
      if (node == null) {
        setOperationContext(null);
        myNodePointer=null;
      }
 else {
        setOperationContext(context);
        myNodePointer=new SNodePointer(node);
      }
      reinitEditor();
      repaint();
    }
  }
);
}
