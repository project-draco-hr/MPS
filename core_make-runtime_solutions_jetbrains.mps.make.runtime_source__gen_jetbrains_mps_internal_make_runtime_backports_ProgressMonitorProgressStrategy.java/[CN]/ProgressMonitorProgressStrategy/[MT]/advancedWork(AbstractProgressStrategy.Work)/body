{
  if (wrk == lastProgress()) {
    initializeIfNeeded();
    int newDone=(int)(wrk.matchingOrTotal(TOTAL).doneRatio() * MAXWORK);
    if (newDone > MAXWORK) {
      newDone=MAXWORK;
    }
    if (newDone > done) {
      monitor.advance(newDone - done);
      done=newDone;
    }
    String newText=(wrk.comment() != null ? wrk.name() + " " + wrk.comment() : wrk.name());
    monitor.subTask(0).start(newText,1);
  }
}
