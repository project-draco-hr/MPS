{
  if (myComponent != null) {
    return myComponent;
  }
 else {
    JTextArea text=new JTextArea();
    text=new JTextArea();
    text.setEditable(false);
    text.setText(myText);
    text.setFont(EditorSettings.getInstance().getDefaultEditorFont());
    text.setBackground(ToolTip.BACKGROUND_COLOR);
    return text;
  }
}
