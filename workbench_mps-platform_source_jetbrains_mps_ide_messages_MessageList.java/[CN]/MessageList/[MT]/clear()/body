{
  if (MPSCore.getInstance().isTestMode())   return;
  SwingUtilities.invokeLater(new Runnable(){
    @Override public void run(){
      if (isDisposed()) {
        return;
      }
      myModel.clear();
      myMessages.clear();
      myErrors=0;
      myWarnings=0;
      myInfos=0;
      myHintObjects=0;
      myList.setFixedCellWidth(myList.getWidth());
      updateHeader();
      updateActions();
    }
  }
);
}
