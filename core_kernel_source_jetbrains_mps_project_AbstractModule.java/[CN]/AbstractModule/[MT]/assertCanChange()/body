{
  if (myRepository == null)   return;
  if (myRepository instanceof DisposedRepository) {
    showDisposedMessage();
    return;
  }
synchronized (REPO_LOCK) {
    if (myRepository == null)     return;
    if (myRepository instanceof DisposedRepository) {
      showDisposedMessage();
      return;
    }
    myRepository.getModelAccess().checkWriteAccess();
  }
}
