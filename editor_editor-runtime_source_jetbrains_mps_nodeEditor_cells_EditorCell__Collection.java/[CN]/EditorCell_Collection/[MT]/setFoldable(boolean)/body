{
  boolean wasPossiblyFolded=isFoldable();
  myCanBeFolded=foldable;
  if (isInTree()) {
    if (wasPossiblyFolded && !isFoldable()) {
      getEditor().getCellTracker().removeFoldableCell(this);
    }
    if (!wasPossiblyFolded && isFoldable()) {
      getEditor().getCellTracker().addFoldableCell(this);
    }
  }
}
