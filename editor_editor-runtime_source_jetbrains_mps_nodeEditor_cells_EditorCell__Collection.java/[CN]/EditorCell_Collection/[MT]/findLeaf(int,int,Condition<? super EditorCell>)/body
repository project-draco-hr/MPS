{
  if (myX <= x && x < myX + myWidth && myY <= y && y < myY + myHeight) {
    for (    jetbrains.mps.openapi.editor.cells.EditorCell child : getVisibleChildCells()) {
      EditorCell result=((EditorCell)child).findLeaf(x,y,condition);
      if (result != null) {
        return result;
      }
    }
  }
  return null;
}
