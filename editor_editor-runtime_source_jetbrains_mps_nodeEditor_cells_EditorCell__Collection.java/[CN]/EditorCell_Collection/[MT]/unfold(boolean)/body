{
  if (!isFolded()) {
    return;
  }
  setFolded(false);
  if (!isInTree()) {
    return;
  }
  if (!isUnderFolded()) {
    removeUnfoldingListener();
    addUnfoldingListenerForChildren();
  }
  if (!programmaticaly) {
    getContext().flushEvents();
    getEditor().relayout();
    adjustSelectionToFoldingState(getEditor());
  }
}
