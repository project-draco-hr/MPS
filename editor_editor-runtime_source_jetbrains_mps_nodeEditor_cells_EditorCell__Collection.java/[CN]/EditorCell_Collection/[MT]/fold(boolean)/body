{
  if (!canBePossiblyFolded())   return;
  if (isFolded()) {
    getEditor().setFolded(this,true);
    return;
  }
  setFolded(true);
  if (!isUnderFolded()) {
    addUnfoldingListener();
    removeFoldingListenerForChildren();
  }
  if (!programmaticaly) {
    getEditorContext().flushEvents();
    getEditor().relayout();
    adjustSelectionToFoldingState(getEditor());
  }
}
