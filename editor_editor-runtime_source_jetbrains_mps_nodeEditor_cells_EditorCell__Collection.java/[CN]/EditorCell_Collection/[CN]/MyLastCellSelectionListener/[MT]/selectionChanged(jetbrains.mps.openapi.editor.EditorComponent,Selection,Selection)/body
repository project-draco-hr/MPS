{
  if (oldSelection == newSelection) {
    return;
  }
  EditorCell deepestSelection=editorComponent.getDeepestSelectedCell();
  if (CellFinderUtil.findChildByCondition(EditorCell_Collection.this,SELECTABLE_LEAF_EXCLUDING_BRACE,true) == deepestSelection || CellFinderUtil.findChildByCondition(EditorCell_Collection.this,SELECTABLE_LEAF_EXCLUDING_BRACE,false) == deepestSelection) {
    enableBraces();
  }
 else {
    disableBraces();
  }
}
