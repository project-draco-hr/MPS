{
  LanguageScope languageScope=lang == null ? LanguageScope.getGlobal() : LanguageScopeFactory.getInstance().getLanguageScope(Collections.singleton(MetaAdapterByDeclaration.getLanguage(lang)));
  try {
    LanguageScope.pushCurrent(languageScope,computable);
    return computable.compute();
  }
  finally {
    LanguageScope.popCurrent(languageScope,computable);
  }
}
