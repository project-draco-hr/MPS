{
  SwingUtilities.invokeLater(new Runnable(){
    public void run(){
      myModel.clear();
      myMessages.clear();
      myErrors=0;
      myWarnings=0;
      myInfos=0;
      myHintObjects=0;
      myList.setFixedCellWidth(myList.getWidth());
      updateHeader();
      updateActions();
    }
  }
);
}
