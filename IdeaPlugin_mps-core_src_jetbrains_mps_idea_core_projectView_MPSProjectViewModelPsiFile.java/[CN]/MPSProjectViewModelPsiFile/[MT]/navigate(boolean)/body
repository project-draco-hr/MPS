{
  MPSPropertiesConfigurable configurable=new ModelPropertiesConfigurable(mySModelDescriptor,new ModuleOperationContext(mySModelDescriptor.getModule()){
    @Override public Project getProject(){
      return ProjectHelper.toMPSProject(MPSProjectViewModelPsiFile.this.getProject());
    }
  }
,true);
  final SingleConfigurableEditor dialog=new SingleConfigurableEditor(myProject,configurable);
  SwingUtilities.invokeLater(new Runnable(){
    @Override public void run(){
      dialog.show();
    }
  }
);
}
