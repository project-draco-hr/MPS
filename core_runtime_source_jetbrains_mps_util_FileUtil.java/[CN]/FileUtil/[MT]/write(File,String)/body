{
  PrintWriter writer=null;
  try {
    writer=new PrintWriter(new OutputStreamWriter(new FileOutputStream(file),"utf-8"));
    writer.print(content);
    writer.flush();
  }
 catch (  IOException e) {
    throw new RuntimeException(e);
  }
 finally {
    if (writer != null) {
      writer.close();
    }
  }
}
