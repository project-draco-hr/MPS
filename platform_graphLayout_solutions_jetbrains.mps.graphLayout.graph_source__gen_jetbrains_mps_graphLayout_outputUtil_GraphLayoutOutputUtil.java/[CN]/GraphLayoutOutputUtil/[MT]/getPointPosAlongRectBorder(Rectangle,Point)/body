{
  double x=-1;
  double y=-1;
  if (rect.x == p.x) {
    x=0;
  }
  if (rect.x + rect.width == p.x) {
    x=1;
  }
  if (rect.y == p.y) {
    y=0;
  }
  if (rect.y + rect.height == p.y) {
    y=1;
  }
  if (x < 0 && y < 0) {
    throw new RuntimeException("bad connection:" + rect + " "+ p);
  }
  if (x < 0) {
    x=1.0 * (p.x - rect.x) / rect.width;
  }
  if (y < 0) {
    y=1.0 * (p.y - rect.y) / rect.height;
  }
  Point2D.Double res=new Point2D.Double(x,y);
  return res;
}
