{
  if (myApter != null)   return myApter;
  try {
    Constructor c=QueryMethod.getAdapterConstructor(getClass().getName());
    if (c != null) {
      myApter=(BaseAdapter)c.newInstance(this);
      return myApter;
    }
  }
 catch (  IllegalAccessException e) {
    LOG.error(e);
  }
catch (  InvocationTargetException e) {
    LOG.error(e);
  }
catch (  InstantiationException e) {
    LOG.error(e);
  }
  LOG.error("Can't find an adapter for " + getClass().getName() + ". Try to generate adaptors (use collection langauge target)");
  return new BaseAdapter(this){
  }
;
}
