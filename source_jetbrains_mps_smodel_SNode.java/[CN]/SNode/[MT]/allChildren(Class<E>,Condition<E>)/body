{
  List<E> resultNodes=new LinkedList<E>();
  Iterator<SNode> nodes=depthFirstChildren();
  while (nodes.hasNext()) {
    SNode node=nodes.next();
    if (clazz.isAssignableFrom(node.getClass())) {
      if (condition.met((E)node)) {
        resultNodes.add((E)node);
      }
    }
  }
  return resultNodes;
}
