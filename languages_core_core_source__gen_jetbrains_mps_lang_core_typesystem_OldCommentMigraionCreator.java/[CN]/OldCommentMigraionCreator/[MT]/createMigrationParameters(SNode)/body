{
  Language language=getLanguage(node);
  SModel migrationModel=getOrCreateMigrationModel(language);
  int oldLanguageVersion=increaseLanguageVersion(language);
  final SNode conceptRef=createNewConceptReference(node);
  if (migrationModel instanceof SModelInternal) {
    ((SModelInternal)migrationModel).addModelImport((new ModuleRepositoryFacade(migrationModel.getRepository()).getModelByName("jetbrains.mps.lang.core.util")).getReference(),false);
  }
  return MultiTuple.<SModel,SNode,Integer>from(migrationModel,conceptRef,oldLanguageVersion);
}
