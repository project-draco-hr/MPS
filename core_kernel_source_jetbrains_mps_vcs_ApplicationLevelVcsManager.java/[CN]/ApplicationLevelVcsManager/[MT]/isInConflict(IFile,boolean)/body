{
  VirtualFile vfile=VFileSystem.getFile(ifile);
  if ((vfile != null) && (vfile.exists())) {
    for (    Project project : myProjectManager.getOpenProjects()) {
      boolean isInConflict=isInConflict(project,vfile,synchronously);
      if (isInConflict) {
        return true;
      }
    }
  }
  return false;
}
