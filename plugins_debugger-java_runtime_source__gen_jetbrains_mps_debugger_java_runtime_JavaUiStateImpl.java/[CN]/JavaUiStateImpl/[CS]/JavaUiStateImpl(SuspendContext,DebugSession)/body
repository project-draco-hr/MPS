{
  super(debugSession);
  myDebugSession=debugSession;
  myContext=context;
  if (context == null) {
    myThreadIndex=-1;
    myStackFrameIndex=AbstractUiState.NO_FRAME;
  }
 else {
    myThreadIndex=findThreadIndex();
    LOG.assertLog(myThreadIndex >= 0);
    myStackFrameIndex=findStackFrameIndex();
  }
}
