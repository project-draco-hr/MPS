{
  clearHighlight();
  mySearchEntries.clear();
  if (myText.getText().length() == 0) {
    myFindResult.setText("");
    myText.setBackground(myDefaultBackground);
    if (requestFocus) {
      myText.requestFocus();
      myEditor.repaint();
    }
    return;
  }
  selectCell(requestFocus);
  updateSearchReport(mySearchEntries.size());
}
