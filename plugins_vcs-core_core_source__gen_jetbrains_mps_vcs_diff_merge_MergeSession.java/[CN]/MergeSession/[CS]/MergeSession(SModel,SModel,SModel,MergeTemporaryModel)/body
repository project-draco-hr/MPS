{
  MergeConflictsBuilder conflictsBuilder=new MergeConflictsBuilder(base,mine,repository);
  myMineChangeSet=conflictsBuilder.myMineChangeSet;
  myRepositoryChangeSet=conflictsBuilder.myRepositoryChangeSet;
