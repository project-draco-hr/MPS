{
  JPanel panel=new JPanel(new GridBagLayout());
  GridBagConstraints c=new GridBagConstraints();
  c.fill=GridBagConstraints.BOTH;
  c.insets=new Insets(3,3,3,3);
  c.gridx=0;
  c.gridy=0;
  c.weightx=1;
  panel.add(myText,c);
  c=new GridBagConstraints();
  c.fill=GridBagConstraints.BOTH;
  c.insets=new Insets(3,3,3,3);
  c.gridx=0;
  c.gridy=1;
  c.weighty=1;
  panel.add(createCheckBoxes(),c);
  return panel;
}
