{
  if ((myMessage=message) == null || (myColor=myMessage.getColor()) == null || myMessage instanceof EditorMessage && !((EditorMessage)myMessage).isValid(myEditorComponent)) {
    return;
  }
  myValid=true;
  myX=myRightToLeft ? 3 : 5;
  myWidth=Icons.OK.getIconWidth() - 1;
  if (!(myMessage instanceof EditorMessage)) {
    myWidth/=2;
    myWidth+=1;
    myX=myRightToLeft ? myWidth + 2 : 0;
  }
  myY=calculateY(myMessage);
  myHeight=calculateHeight(myMessage);
}
