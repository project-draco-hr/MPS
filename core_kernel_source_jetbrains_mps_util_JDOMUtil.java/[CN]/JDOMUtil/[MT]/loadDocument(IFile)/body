{
  SAXBuilder saxBuilder=createBuilder();
  InputStream in=null;
  try {
    in=file.openInputStream();
    return saxBuilder.build(new InputStreamReader(in,ENCODING));
  }
 catch (  JDOMException e) {
    LOG.error("FAILED TO LOAD FILE : " + file.getPath());
    throw e;
  }
catch (  IOException e) {
    LOG.error("FAILED TO LOAD FILE : " + file.getPath());
    throw e;
  }
 finally {
    if (in != null) {
      try {
        in.close();
      }
 catch (      IOException e) {
        LOG.error(e);
      }
    }
  }
}
