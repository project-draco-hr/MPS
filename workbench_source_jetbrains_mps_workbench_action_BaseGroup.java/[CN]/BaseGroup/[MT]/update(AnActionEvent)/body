{
  super.update(e);
  if (myIsInternal && !InternalFlag.isInternalMode()) {
    e.getPresentation().setEnabled(false);
    e.getPresentation().setVisible(false);
  }
 else {
    ModelAccess.instance().runReadAction(new Runnable(){
      public void run(){
        doUpdate(e);
      }
    }
);
  }
}
