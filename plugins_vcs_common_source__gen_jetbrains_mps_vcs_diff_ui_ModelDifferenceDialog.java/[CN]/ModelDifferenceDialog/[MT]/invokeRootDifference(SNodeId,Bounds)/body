{
  if (rootId == null) {
    MetadataUtil.showMetadataDifference(myChangeSet.getOldModel(),myChangeSet.getNewModel(),myProject,myContentTitles[0],myContentTitles[1],scrollTo);
    return;
  }
  if (myRootsDialogInvoked) {
    return;
  }
  myGoingToNeighbour=false;
  myRootsDialogInvoked=true;
  final Wrappers._T<RootDifferenceDialog> rootDialog=new Wrappers._T<RootDifferenceDialog>();
  ModelAccess.instance().runReadAction(new Runnable(){
    public void run(){
      rootDialog.value=new RootDifferenceDialog(ModelDifferenceDialog.this,rootId,myTree.getNameForRoot(rootId),(isVisible() ? getWindow() : WindowManager.getInstance().getFrame(myProject)),scrollTo);
    }
  }
);
  SwingUtilities.invokeLater(new Runnable(){
    public void run(){
      rootDialog.value.toFront();
    }
  }
);
  rootDialog.value.show();
}
