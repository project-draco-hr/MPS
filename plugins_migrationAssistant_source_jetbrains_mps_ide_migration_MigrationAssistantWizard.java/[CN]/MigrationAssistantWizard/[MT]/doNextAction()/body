{
  super.doNextAction();
  final Runnable task=((MigrationStep)getCurrentStepObject()).getAutostartTask();
  if (task != null) {
    SwingUtilities.invokeLater(new Runnable(){
      @Override public void run(){
        ApplicationManager.getApplication().executeOnPooledThread(task);
        updateStep();
      }
    }
);
  }
}
