{
  return SNodeOperations.isInstanceOf(SNodeOperations.getParent(_context.getNode()),"jetbrains.mps.baseLanguage.structure.VariableDeclaration") && SNodeOperations.hasRole(_context.getNode(),"jetbrains.mps.baseLanguage.structure.VariableDeclaration","initializer") && MathTypeUtil.pickExplicitWidening(TypeChecker.getInstance().getTypeOf(_context.getNode()),TypeChecker.getInstance().getTypeOf(SNodeOperations.getParent(_context.getNode()))) != 0;
}
