{
  for (  PsiFileSystemItem fsItem : event.getCreated()) {
    if (importantDir(fsItem) || firstFileInDir(fsItem)) {
      update();
      return;
    }
  }
  for (  PsiFileSystemItem fsItem : event.getRemoved()) {
    if (importantDir(fsItem) || wasLastFileInDir(fsItem)) {
      update();
      return;
    }
  }
}
