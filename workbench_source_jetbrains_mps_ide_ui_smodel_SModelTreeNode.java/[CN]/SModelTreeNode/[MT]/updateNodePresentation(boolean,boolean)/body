{
  ModelAccess.instance().runReadInEDT(new Runnable(){
    public void run(){
      if (getTree() == null)       return;
      if (!getOperationContext().isValid())       return;
      updatePresentation();
      updateNodePresentationInTree();
      if (reloadSubTree) {
        updateSubTree();
      }
      if (updateAncesotrs) {
        updateAncestorsPresentationInTree();
      }
    }
  }
);
}
