{
  VirtualFile vfile=VirtualFileUtils.getVirtualFile(ifile);
  if ((vfile != null) && (vfile.exists())) {
    for (    Project project : getProjects()) {
      boolean isInConflict=MPSVCSManager.getInstance(project).isInConflict(vfile,synchronously);
      if (isInConflict) {
        return true;
      }
    }
  }
  return false;
}
