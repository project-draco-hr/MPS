{
  if (myHandlers == null) {
    myHandlers=new Listeners<EventHandler<? super PropertyChangeEvent<ValueT>>>();
  }
  if (myHandlers.isEmpty()) {
    doAddListeners();
  }
  final Registration reg=myHandlers.add(handler);
  return new Registration(){
    public void remove(){
      reg.remove();
      if (myHandlers.isEmpty()) {
        doRemoveListeners();
      }
    }
  }
;
}
