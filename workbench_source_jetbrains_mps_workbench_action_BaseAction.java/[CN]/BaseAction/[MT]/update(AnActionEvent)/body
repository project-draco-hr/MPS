{
  super.update(e);
  ModelAccess.instance().runReadAction(new Runnable(){
    public void run(){
      enable(e.getPresentation());
      if (myDisableOnNoProject && e.getData(PlatformDataKeys.PROJECT) == null) {
        disable(e.getPresentation());
        return;
      }
      if (!collectActionData(e)) {
        disable(e.getPresentation());
        return;
      }
      doUpdate(e);
    }
  }
);
}
