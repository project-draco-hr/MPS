{
  setBackground(Color.WHITE);
  JLabel label=new JLabel(Icons.INTENTION_ICON);
  label.setBorder(new EmptyBorder(0,2,1,2));
  label.setBackground(Color.LIGHT_GRAY);
  add(label);
  addMouseListener(new MouseAdapter(){
