{
  myFindResult.setFont(new Font(myFindResult.getFont().getName(),Font.PLAIN,myFindResult.getFont().getSize()));
  if (matches > 100) {
    myFindResult.setFont(new Font(myFindResult.getFont().getName(),Font.BOLD,myFindResult.getFont().getSize()));
    return "More than 100 matches";
  }
  if (matches > 1) {
    return String.valueOf(matches) + " matches";
  }
  if (matches == 1) {
    return String.valueOf(matches) + " match";
  }
  return "No matches";
}
