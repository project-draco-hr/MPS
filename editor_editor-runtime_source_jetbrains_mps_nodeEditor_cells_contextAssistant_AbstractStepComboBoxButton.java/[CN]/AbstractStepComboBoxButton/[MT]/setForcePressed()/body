{
  myForcePressed=true;
  repaint();
  return new Disposable(){
    @Override public void dispose(){
      ApplicationManager.getApplication().invokeLater(new Runnable(){
        @Override public void run(){
          myForcePressed=false;
          myPopup=null;
        }
      }
,ModalityState.any());
      repaint();
      fireStateChanged();
    }
  }
;
}
