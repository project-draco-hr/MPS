{
  requestFocus();
  processCoordSelection(mouseEvent);
  if (mouseEvent.isControlDown()) {
    if (getSelectedCell() != null) {
      CommandProcessor.instance().executeLightweightCommand(new Runnable(){
        public void run(){
          SNode selectedNode=getSelectedCell().getSNode();
          while (selectedNode != null) {
            final IErrorReporter herror=TypeChecker.getInstance().getTypeErrorDontCheck(selectedNode);
            if (herror != null) {
              SwingUtilities.invokeLater(new Runnable(){
                public void run(){
                  String s=herror.reportError();
                  new MPSErrorDialog(myOperationContext.getMainFrame(),s,"TYPESYSTEM ERROR",CollectionUtil.asList(new JButton(new AbstractAction("Go To Rule"){
                    public void actionPerformed(                    ActionEvent e){
                      CommandProcessor.instance().executeLightweightCommand(new Runnable(){
                        public void run(){
                          GoToTypeErrorRuleAction.goToTypeErrorRule(myOperationContext,herror);
                        }
                      }
);
                    }
                  }
)));
                }
              }
);
              return;
            }
            selectedNode=selectedNode.getParent();
          }
        }
      }
);
    }
  }
}
