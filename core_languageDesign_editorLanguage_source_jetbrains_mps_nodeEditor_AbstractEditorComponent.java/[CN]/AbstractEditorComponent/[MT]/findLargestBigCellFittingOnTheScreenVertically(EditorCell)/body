{
  int thresholdHeight=myScrollPane.getViewport().getHeight();
  EditorCell result=cell;
  EditorCell current=cell;
  while (true) {
    if (current.isBigCell()) {
      result=current;
    }
    current=current.getParent();
    if (current == null) {
      return result;
    }
    if (current.getHeight() > thresholdHeight) {
      return result;
    }
  }
}
