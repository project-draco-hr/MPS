{
  File tmp=new File(System.getProperty("java.io.tmpdir"));
  int i=0;
  while (true) {
    if (!new File(tmp,"mpstemp" + i).exists()) {
      break;
    }
    i++;
  }
  File result=new File(tmp,"mpstemp" + i);
  try {
    result.createNewFile();
  }
 catch (  IOException e) {
    e.printStackTrace();
  }
  return result;
}
