{
  for (  Language language : LanguageDependenciesManager.getAllExtendedLanguages(lang)) {
    SModel descriptor=LanguageAspect.BEHAVIOR.get(language);
    if (descriptor == null) {
      if (lang == language)       errors.add("Behavior aspect is absent");
 else       errors.add("Cannot extend language without behavior aspect: " + language.getModuleName());
    }
  }
}
