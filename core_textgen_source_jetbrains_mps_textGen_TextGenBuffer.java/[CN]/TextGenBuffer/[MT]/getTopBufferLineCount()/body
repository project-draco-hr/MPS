{
  final CharSequence v=myBuffers[TOP].value();
  if (v.length() == 0) {
    return 0;
  }
  String b=v.toString();
  int lineSepIndex=b.indexOf(LINE_SEPARATOR,0);
  int lineCount=0;
  while (lineSepIndex != -1) {
    lineCount++;
    lineSepIndex=b.indexOf(LINE_SEPARATOR,lineSepIndex + LINE_SEPARATOR.length());
  }
  return lineCount + 2;
}
