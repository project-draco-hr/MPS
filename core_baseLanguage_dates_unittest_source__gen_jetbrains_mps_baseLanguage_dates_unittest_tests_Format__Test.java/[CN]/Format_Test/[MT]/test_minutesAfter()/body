{
  Long dt=DateTimeOperations.plus(System.currentTimeMillis(),Period.minutes(27));
  String actual=DateTimeOperations.print(dt,_FormatTables.MAIN_FORMAT_TABLE.getFormatter("offset"),null,null);
  if (DateTimeOperations.compare(dt,CompareType.valueOf("EQ"),System.currentTimeMillis(),DateTimeFieldType.hourOfDay()) && (DateTimeOperations.equals(Period.minutes(27),new Period((long)DateTimeOperations.minus(dt,System.currentTimeMillis()),PeriodType.minutes())))) {
    Assert.assertEquals("in 27 minutes",actual);
  }
}
