{
  DefaultActionGroup group=ActionUtils.groupFromActions(new CloseAction(),ActionManager.getInstance().getAction(IdeActions.ACTION_PIN_ACTIVE_TAB),new SelectInEditorAction());
  ActionToolbar actionToolbar=ActionManager.getInstance().createActionToolbar(ActionPlaces.TOOLBAR,group,false);
  actionToolbar.setTargetComponent(targetComponent);
  return actionToolbar.getComponent();
}
