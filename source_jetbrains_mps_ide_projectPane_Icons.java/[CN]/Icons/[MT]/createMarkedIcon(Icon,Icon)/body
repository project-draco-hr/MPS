{
  return new Icon(){
    public void paintIcon(    Component c,    Graphics g,    int x,    int y){
      icon.paintIcon(c,g,x,y);
      mark.paintIcon(c,g,x,y);
    }
    public int getIconWidth(){
      return Math.max(icon.getIconWidth(),icon.getIconHeight());
    }
    public int getIconHeight(){
      return Math.max(icon.getIconWidth(),icon.getIconHeight());
    }
  }
;
}
