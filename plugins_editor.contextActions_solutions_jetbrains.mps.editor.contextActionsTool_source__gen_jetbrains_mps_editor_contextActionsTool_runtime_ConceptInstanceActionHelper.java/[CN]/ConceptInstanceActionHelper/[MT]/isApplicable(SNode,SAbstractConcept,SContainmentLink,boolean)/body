{
  SNode contextNode=SNodeOperations.getNodeAncestor(selectedNode,SNodeOperations.asSConcept(contextContecpt),true,false);
  if ((contextNode != null)) {
    if ((selectedNode == contextNode || SNodeOperations.getParent(selectedNode) == contextNode) || availableInChildren) {
      return true;
    }
 else     if (availableInChildren) {
      return true;
    }
  }
  return false;
}
