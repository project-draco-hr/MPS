{
  LOG.assertNotInEDT();
  try {
    IMPSPlugin plugin=getPlugin();
    if (plugin == null)     return false;
    IIDEAHandler handler=plugin.getProjectCreator();
    if (handler == null)     return false;
    handler.ping();
    return true;
  }
 catch (  RemoteException e) {
    return false;
  }
}
