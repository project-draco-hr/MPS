{
  if (myTotal > 0) {
    throw new IllegalStateException("start() is called twice");
  }
  myActiveChild=null;
  myDone=0;
  if (totalWork <= 0) {
    throw new IllegalStateException("totalWork=" + totalWork);
  }
  myTotal=totalWork;
  myName=taskName;
  setTitleInternal(taskName);
  setStepInternal("");
  startInternal(taskName);
  update();
}
