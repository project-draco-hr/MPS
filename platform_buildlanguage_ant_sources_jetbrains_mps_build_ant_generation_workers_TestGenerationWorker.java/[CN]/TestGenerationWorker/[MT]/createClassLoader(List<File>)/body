{
  List<URL> classPath=new ArrayList<URL>();
  for (  File f : files) {
    try {
      classPath.add(new URL("file:///" + f.getAbsolutePath() + (f.isDirectory() ? "/" : "")));
    }
 catch (    MalformedURLException e) {
      log(e);
    }
  }
  return new URLClassLoader(classPath.toArray(new URL[classPath.size()]));
}
