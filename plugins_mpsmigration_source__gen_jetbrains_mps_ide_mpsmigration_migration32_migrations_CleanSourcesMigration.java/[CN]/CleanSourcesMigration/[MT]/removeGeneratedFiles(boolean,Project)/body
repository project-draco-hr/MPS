{
  ApplicationManager.getApplication().runWriteAction(new Runnable(){
    public void run(){
      if (sources) {
        removeGenSources(p);
      }
      removeClassesGen(p);
    }
  }
);
  ModelAccess.instance().runWriteAction(new Runnable(){
    public void run(){
      ClassLoaderManager.getInstance().reloadAll(new EmptyProgressMonitor());
    }
  }
);
}
