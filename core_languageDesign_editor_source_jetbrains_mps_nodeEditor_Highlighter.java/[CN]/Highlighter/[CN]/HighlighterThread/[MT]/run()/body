{
  if (IdeMain.isTestMode())   return;
  CommandProcessor commandProcessor=CommandProcessor.getInstance();
  while (true) {
    try {
      while (commandProcessor.getCurrentCommand() != null) {
        Thread.sleep(200);
      }
      doUpdate();
      if (myStopThread) {
        break;
      }
      Thread.sleep(300);
    }
 catch (    Throwable t) {
      LOG.error(t);
    }
  }
}
