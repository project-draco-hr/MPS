{
  myContext=context;
  myPlace=place;
  if (group instanceof GeneratedActionGroup) {
    myGroupId=ActionManager.getInstance().getId(group);
    if (myGroupId == null) {
      LOG.warning("Using ancestor of GeneratedActionGroup in menu without action id. This can be a memleak. Class: " + group.getClass().getName());
      myGroup=group;
    }
 else {
      myGroup=null;
    }
  }
 else {
    myGroup=group;
    myGroupId=null;
  }
  myPresentationFactory=presentationFactory;
  myPresentation=myPresentationFactory.getPresentation(group);
  myMnemonicEnabled=enableMnemonics;
  init();
  this.addMenuListener(new MenuListener(){
    public void menuSelected(    MenuEvent e){
      installSynchronizer();
    }
    public void menuDeselected(    MenuEvent e){
      uninstallSynchronizer();
    }
    public void menuCanceled(    MenuEvent e){
    }
  }
);
}
