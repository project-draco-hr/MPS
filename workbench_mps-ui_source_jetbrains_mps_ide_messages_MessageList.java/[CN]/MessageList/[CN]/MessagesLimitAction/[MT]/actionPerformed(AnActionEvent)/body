{
  String result=Messages.showInputDialog(MessageList.this.myComponent,"Set max number of showing messages","Messages limit",null,String.valueOf(MessageList.this.myMaxListSize),new InputValidatorEx(){
    @Nullable @Override public String getErrorText(    String inputString){
      return checkInput(inputString) ? null : "Enter correct number";
    }
    @Override public boolean checkInput(    String inputString){
      try {
        final Integer i=Integer.valueOf(inputString);
        if (i < 1)         return false;
      }
 catch (      NumberFormatException nfe) {
        return false;
      }
      return true;
    }
    @Override public boolean canClose(    String inputString){
      return checkInput(inputString);
    }
  }
);
  if (result != null)   MessageList.this.myMaxListSize=Integer.valueOf(result);
}
