{
  String options[]={"Yes","No","Cancel"};
  Boolean value=settings.getInitialValue();
  boolean bValue=value != null && value;
  int option=JOptionPane.showOptionDialog(refactoringContext.getCurrentOperationContext().getMainFrame(),text,settings.getTitle(),JOptionPane.YES_NO_CANCEL_OPTION,JOptionPane.QUESTION_MESSAGE,null,options,options[bValue ? 0 : 1]);
  if (option == 2)   return false;
  refactoringContext.setParameter(paramName,option == 0);
  return true;
}
