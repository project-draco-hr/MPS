{
  if (e.getButton() != MouseEvent.BUTTON1) {
    return;
  }
  int x=e.getX() - mySeparatorLineX;
  int y=e.getY();
  FoldingButton theButton=null;
  for (  FoldingButton button : myFoldingButtons.values()) {
    if (button.isInside(x,y)) {
      theButton=button;
      break;
    }
  }
  if (theButton != null) {
    if (e.getID() == MouseEvent.MOUSE_CLICKED) {
      theButton.activate();
    }
    e.consume();
  }
}
