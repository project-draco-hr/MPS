{
  if (e.getX() > myX + FoldingButton.WIDTH / 2 || e.getX() < myX - FoldingButton.WIDTH / 2)   return false;
  if (!myIsFolded && ((e.getY() >= myY1 && e.getY() <= myY1 + FoldingButton.WIDTH) || (e.getY() <= myY2 && e.getY() >= myY2 - FoldingButton.WIDTH))) {
    return true;
  }
  if (myIsFolded && e.getY() >= (myY1 + myY2 - FoldingButton.WIDTH) / 2 && e.getY() <= (myY1 + myY2 + FoldingButton.WIDTH) / 2) {
    return true;
  }
  return false;
}
