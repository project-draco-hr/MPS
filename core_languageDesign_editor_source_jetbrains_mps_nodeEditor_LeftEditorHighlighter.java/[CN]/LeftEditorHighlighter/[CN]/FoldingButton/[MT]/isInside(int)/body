{
  if (!myIsFolded && ((y >= myY1 && y <= myY1 + FoldingButton.WIDTH) || (y <= myY2 && y >= myY2 - FoldingButton.WIDTH))) {
    return true;
  }
  if (myIsFolded && y >= (myY1 + myY2 - FoldingButton.WIDTH) / 2 && y <= (myY1 + myY2 + FoldingButton.WIDTH) / 2) {
    return true;
  }
  return false;
}
