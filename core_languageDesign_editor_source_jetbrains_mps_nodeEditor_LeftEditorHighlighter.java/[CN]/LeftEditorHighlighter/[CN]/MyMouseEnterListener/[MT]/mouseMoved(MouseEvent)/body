{
  if (isInBracketsAndFoldingButtons(e)) {
    for (    FoldingButton button : myFoldingButtons.values()) {
      if (button.isInside(e.getY())) {
        if (!button.myMouseOver) {
          button.mouseEntered();
        }
      }
 else {
        if (button.myMouseOver) {
          button.mouseExited();
        }
      }
    }
  }
 else {
    for (    FoldingButton button : myFoldingButtons.values()) {
      if (button.myMouseOver) {
        button.mouseExited();
      }
    }
  }
}
