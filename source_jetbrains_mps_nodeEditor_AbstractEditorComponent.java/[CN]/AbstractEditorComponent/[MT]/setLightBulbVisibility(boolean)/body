{
  CommandProcessor.instance().executeLightweightCommand(new Runnable(){
    public void run(){
      if (value) {
        if ((!getEnabledIntentions().isEmpty()) && (!getEditedNode().getModel().isNotEditable())) {
          showLightBulb();
        }
      }
 else {
        hideLightBulb();
      }
    }
  }
);
}
