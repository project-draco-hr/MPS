{
  JViewport viewport=myScrollPane.getViewport();
  Rectangle viewRect=viewport.getViewRect();
  if (myRootCell == null) {
    return new Dimension(viewRect.width,viewRect.height);
  }
  return new Dimension(Math.max(viewRect.width,myRootCell.getWidth() + myShiftX + 10),Math.max(viewRect.height,myRootCell.getHeight() + myShiftY + 10));
}
