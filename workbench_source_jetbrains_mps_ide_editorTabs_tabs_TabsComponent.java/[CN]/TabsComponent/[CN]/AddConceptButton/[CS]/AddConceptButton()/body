{
  setAction(new AbstractAction("+"){
    public void actionPerformed(    ActionEvent e){
      showMenu();
    }
  }
);
  registerKeyboardAction(new AbstractAction(){
    public void actionPerformed(    ActionEvent e){
      showMenu();
    }
  }
,KeyStroke.getKeyStroke("INSERT"),JComponent.WHEN_IN_FOCUSED_WINDOW);
}
