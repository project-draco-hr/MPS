{
  Integer ctr=myCounters.get(Thread.currentThread());
  if (ctr == null)   return;
  if ((ctr-=1) == 0) {
    myCounters.remove(Thread.currentThread());
    if (myCounters.isEmpty()) {
      myContext.get().dispose();
      myContext.set(null);
    }
  }
 else {
    myCounters.put(Thread.currentThread(),ctr);
  }
}
