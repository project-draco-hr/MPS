{
  Language l=myConceptToLanguage.get(concept);
  if (l != null) {
    return l;
  }
  String languageNamespace=NameUtil.namespaceFromConcept((AbstractConceptDeclaration)concept.getAdapter());
  if (languageNamespace == null) {
    return null;
  }
  l=scope.getLanguage(languageNamespace);
  if (l != null) {
    MapSequence.fromMap(myConceptToLanguage).put(concept,l);
  }
  return l;
}
