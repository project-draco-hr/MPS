{
  myTimer=new Timer("ProjectPane Tree Updater",500){
    protected void onTimer() throws InterruptedException {
      ApplicationManager.getApplication().invokeLater(new Runnable(){
        public void run(){
          process();
        }
      }
);
      myTimer.suspend();
    }
  }
;
  myTimer.setTakeInitialDelay(true);
}
