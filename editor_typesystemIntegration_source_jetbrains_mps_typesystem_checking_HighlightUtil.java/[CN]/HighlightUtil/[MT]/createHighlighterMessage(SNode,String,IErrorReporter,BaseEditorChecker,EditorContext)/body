{
  if (errorReporter == null) {
    errorReporter=new SimpleErrorReporter(node,message,null,null,MessageStatus.ERROR,new NodeMessageTarget());
  }
  final MessageStatus status=errorReporter.getMessageStatus();
  HighlighterMessage error=new HighlighterMessage(node,status,errorReporter.getErrorTarget(),getMessageColor(status),message,checker);
  error.setErrorReporter(errorReporter);
  for (  QuickFixProvider quickFixProvider : errorReporter.getIntentionProviders()) {
    error.addIntentionProvider(quickFixProvider);
  }
  return error;
}
