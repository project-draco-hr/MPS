{
  EditorCell result=cell;
  while (true) {
    EditorCell prevLeaf=result.getPrevLeaf();
    if (!myCell.isAncestorOf(prevLeaf))     break;
    if (!myLineContent.contains(prevLeaf))     break;
    if (result.getStyle().get(StyleAttributes.PUNCTUATION_LEFT) || prevLeaf.getStyle().get(StyleAttributes.PUNCTUATION_RIGTH)) {
      result=prevLeaf;
    }
 else {
      break;
    }
  }
  return result;
}
