{
  SNode leftExpr=SLinkOperations.getTarget(node,"leftExpression",true);
  SNode rightExpression=SLinkOperations.getTarget(node,"rightExpression",true);
  SNode equalsExpression=SConceptOperations.createNewNode("jetbrains.mps.baseLanguage.structure.InstanceMethodCall",null);
  SLinkOperations.setTarget(equalsExpression,"instance",leftExpr,true);
  SLinkOperations.setTarget(equalsExpression,"baseMethodDeclaration",SLinkOperations.getTarget(new QuotationClass_().createNode(),"baseMethodDeclaration",false),false);
  SLinkOperations.insertChildFirst(equalsExpression,"actualArgument",rightExpression);
  SNodeOperations.replaceWithAnother(node,equalsExpression);
}
