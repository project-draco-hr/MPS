{
  setSelectionIndex(getSelectionIndex());
  String[] types=getStrings();
  int h=0;
  int w=getWidth();
  for (int i=0; i < types.length; i++) {
    String type=types[i];
    TextLine textLine=new TextLine(type,this);
    textLine.relayout();
    h+=textLine.getHeight();
    w=Math.max(w,textLine.getWidth());
  }
  setSize(w,h);
}
