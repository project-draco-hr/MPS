{
  if (!super.isSelectable())   return false;
  if (getText() == null || getText().length() == 0) {
    return StyleAttributesUtil.isFirstPositionAllowed(getStyle()) && StyleAttributesUtil.isLastPositionAllowed(getStyle());
  }
  if (getText().length() == 1) {
    return StyleAttributesUtil.isFirstPositionAllowed(getStyle()) || StyleAttributesUtil.isLastPositionAllowed(getStyle());
  }
  return true;
}
