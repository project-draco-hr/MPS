{
  return new Condition<String>(){
    public boolean met(    String object){
      int beginIndex=object.toLowerCase().indexOf(pattern.toLowerCase()), endIndex=beginIndex + pattern.length();
      if (beginIndex != -1 && object.substring(beginIndex,endIndex).equalsIgnoreCase(pattern)) {
        return true;
      }
 else {
        return false;
      }
    }
  }
;
}
