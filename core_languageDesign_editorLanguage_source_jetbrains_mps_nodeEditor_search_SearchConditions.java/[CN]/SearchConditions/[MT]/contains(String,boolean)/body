{
  final Pattern p=Pattern.compile(pattern,ignoreCase ? 0 : Pattern.CASE_INSENSITIVE);
  return new Condition<String>(){
    public boolean met(    String object){
      Matcher m=p.matcher(object);
      if (m.find()) {
        return true;
      }
 else {
        return false;
      }
    }
  }
;
}
