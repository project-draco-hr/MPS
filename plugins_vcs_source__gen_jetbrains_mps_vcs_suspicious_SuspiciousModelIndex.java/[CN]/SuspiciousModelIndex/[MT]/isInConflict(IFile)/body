{
  VirtualFile vfile=VirtualFileUtils.getVirtualFile(ifile);
  if ((vfile != null) && (vfile.exists())) {
    for (    Project project : ProjectManager.getInstance().getOpenProjects()) {
      if (MPSVcsManager.getInstance(project).isInConflict(vfile)) {
        return true;
      }
    }
  }
  return false;
}
