{
  if (canRead()) {
    r.run();
    return true;
  }
  return ApplicationManager.getApplication().runReadAction(new com.intellij.openapi.util.Computable<Boolean>(){
    @Override public Boolean compute(){
      if (getReadLock().tryLock()) {
        try {
          r.run();
        }
  finally {
          getReadLock().unlock();
        }
        return true;
      }
 else {
        return false;
      }
    }
  }
);
}
