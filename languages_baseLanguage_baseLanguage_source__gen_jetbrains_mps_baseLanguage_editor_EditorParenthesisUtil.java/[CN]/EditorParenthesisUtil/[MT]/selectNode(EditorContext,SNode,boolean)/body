{
  context.flushEvents();
  EditorComponent component=context.getEditorComponent();
  EditorCell nodeCell=component.findNodeCell(expr);
  EditorCell cell=CellFinderUtil.findChild(nodeCell,(selectLastLeaf ? CellFinders.LAST_SELECTABLE_LEAF : CellFinders.FIRST_SELECTABLE_LEAF));
  if (cell != null) {
    component.changeSelection(cell);
  }
}
