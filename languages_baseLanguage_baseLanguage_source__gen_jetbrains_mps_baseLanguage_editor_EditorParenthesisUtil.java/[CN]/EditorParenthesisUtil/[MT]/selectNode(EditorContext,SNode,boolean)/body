{
  context.flushEvents();
  EditorComponent component=context.getEditorComponent();
  EditorCell nodeCell=component.findNodeCell(expr);
  EditorCell cell=((jetbrains.mps.nodeEditor.cells.EditorCell)nodeCell).findChild((selectLastLeaf ? CellFinders.LAST_SELECTABLE_LEAF : CellFinders.FIRST_SELECTABLE_LEAF));
  if (cell != null) {
    component.changeSelection(cell);
  }
}
