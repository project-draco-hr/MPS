{
  if (RuntimeFlags.isTestMode()) {
    return;
  }
  new Thread(){
    @Override public void run(){
      try {
        IProjectHandler handler=MPSPlugin.getInstance().getProjectHandler(myProject);
        if (handler == null) {
          return;
        }
        handler.addIdeHandler(MPSProjectIDEHandler.this);
      }
 catch (      RemoteException e) {
        e.printStackTrace();
      }
    }
  }
.start();
}
