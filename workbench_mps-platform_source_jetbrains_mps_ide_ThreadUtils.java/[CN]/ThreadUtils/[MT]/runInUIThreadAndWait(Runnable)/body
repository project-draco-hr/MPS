{
  if (SwingUtilities.isEventDispatchThread()) {
    try {
      r.run();
    }
 catch (    Exception e) {
      LOG.error(e);
      return false;
    }
  }
 else {
    try {
      SwingUtilities.invokeAndWait(r);
    }
 catch (    Exception e) {
      LOG.error(e);
      return false;
    }
  }
  return true;
}
