{
  File file=new File(path,fileName);
  file.getParentFile().mkdirs();
  FileWriter writer=null;
  try {
    writer=new FileWriter(file);
    writer.append(text);
    writer.flush();
  }
 catch (  IOException e) {
    e.printStackTrace();
  }
 finally {
    if (writer != null) {
      try {
        writer.close();
      }
 catch (      IOException e) {
        e.printStackTrace();
      }
    }
  }
  if (!file.setLastModified(System.currentTimeMillis() - 1000)) {
    Assert.fail("Can't touch the file " + file);
  }
}
