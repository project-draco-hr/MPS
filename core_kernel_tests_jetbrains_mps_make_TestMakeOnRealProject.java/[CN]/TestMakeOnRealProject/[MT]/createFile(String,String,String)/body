{
  File file=new File(path,fileName);
  try {
    FileWriter writer=new FileWriter(file);
    writer.append(text);
    writer.flush();
    writer.close();
  }
 catch (  IOException e) {
    e.printStackTrace();
  }
  if (!file.setLastModified(System.currentTimeMillis() - 1000)) {
    fail("Can't touch the file " + file);
  }
}
