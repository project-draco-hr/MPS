{
  points.clear();
  points.add(new Vector(location.x - halfWidth,location.y - halfWidth));
  points.add(new Vector(location.x + halfWidth,location.y - halfWidth));
  points.add(new Vector(location.x + halfWidth,location.y + halfWidth));
  points.add(new Vector(location.x - halfWidth,location.y + halfWidth));
  points.add(new Vector(location.x - halfWidth,location.y - halfWidth));
}
