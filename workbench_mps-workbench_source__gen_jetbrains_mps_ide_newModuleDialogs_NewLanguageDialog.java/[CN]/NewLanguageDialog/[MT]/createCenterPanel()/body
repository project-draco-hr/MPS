{
  if (myLanguageSettings == null) {
    myLanguageSettings=new NewLanguageSettings((myProject != null ? myProject.getProjectFile().getParentFile().getAbsolutePath() : null)){
      @Override protected void updateLanguageLocation(){
        super.updateLanguageLocation();
        if (myLanguageSettings != null) {
          check();
        }
      }
    }
;
  }
  return myLanguageSettings;
}
