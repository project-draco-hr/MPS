{
  File current=new File(base.getPath() + File.separator + prefix).getAbsoluteFile();
  if (prefix.length() > 0) {
    addZipEntry(out,prefix,current);
  }
  if (current.isDirectory()) {
    for (    File file : current.listFiles()) {
      if (file.isFile()) {
        _zip(base,prefix + file.getName(),out);
      }
      if (file.isDirectory()) {
        _zip(base,prefix + file.getName() + "/",out);
      }
    }
  }
}
