{
  ToolWindow window=getToolWindow();
  if (window == null)   return;
  if (hasErrors() || hasWarnings() || hasInfo()) {
    window.setTitle(NameUtil.formatNumericalString(myErrors,"error") + "/" + NameUtil.formatNumericalString(myWarnings,"warning")+ "/"+ NameUtil.formatNumericalString(myInfos,"info"));
  }
 else {
    window.setTitle("");
  }
}
