{
  if (hasErrors() || hasWarnings() || hasInfo()) {
    if (getToolWindow() == null)     return;
    getToolWindow().setTitle(" (" + NameUtil.formatNumericalString(myErrors,"error") + "/"+ NameUtil.formatNumericalString(myWarnings,"warning")+ "/"+ NameUtil.formatNumericalString(myInfos,"info")+ ")");
  }
}
