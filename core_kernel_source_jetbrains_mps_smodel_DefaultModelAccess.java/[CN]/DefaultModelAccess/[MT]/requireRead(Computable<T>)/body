{
  T result=null;
  int i;
  int MAX_TRIES=4;
  for (i=0; i < MAX_TRIES && (result=tryRead(c)) == null; ++i) {
    try {
      Thread.sleep((1 << i) * 100);
    }
 catch (    InterruptedException ignore) {
    }
  }
  if (i >= MAX_TRIES) {
    throw new RuntimeException("Failed to acquire read lock");
  }
  return result;
}
