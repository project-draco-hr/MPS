{
  if (canRead()) {
    r.run();
    return;
  }
  if (mySharedReadInWriteMode) {
    try {
      mySharedReadInWriteLock.readLock().lock();
      r.run();
    }
  finally {
      mySharedReadInWriteLock.readLock().unlock();
    }
    return;
  }
  getReadLock().lock();
  try {
    r.run();
  }
  finally {
    getReadLock().unlock();
  }
}
