{
  FileSystem.getInstance().refresh(file);
  if (file.isDirectory()) {
    for (    IFile child : file.getChildren()) {
      refreshRecursivelyIntoJars(child);
    }
  }
 else   if (file.getPath().endsWith(JAR)) {
    IFile jarRoot=stepIntoJar(file);
    refreshRecursivelyIntoJars(jarRoot);
  }
}
