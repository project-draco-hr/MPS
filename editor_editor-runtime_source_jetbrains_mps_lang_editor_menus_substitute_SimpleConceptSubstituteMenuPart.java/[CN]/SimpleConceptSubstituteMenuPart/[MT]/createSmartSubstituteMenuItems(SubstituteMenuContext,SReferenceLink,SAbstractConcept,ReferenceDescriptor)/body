{
  SNode currentChild=context.getCurrentTargetNode();
  SNode parentNode=context.getParentNode();
  List<SubstituteMenuItem> result=new ArrayList<>();
  Iterable<SNode> referentNodes=refDescriptor.getScope().getAvailableElements(null);
  for (  SNode referentNode : referentNodes) {
    if (referentNode == null || !checkForSubconcept(targetConcept,referentNode)) {
      continue;
    }
    result.add(new SmartReferenceSubstituteMenuItem(referentNode,parentNode,currentChild,myConcept,smartReference,refDescriptor,context.getEditorContext()));
  }
  return result;
}
