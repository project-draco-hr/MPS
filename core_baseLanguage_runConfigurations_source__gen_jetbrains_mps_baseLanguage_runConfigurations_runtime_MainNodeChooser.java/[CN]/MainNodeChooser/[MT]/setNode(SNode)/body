{
  if (this.myNode == node) {
    return;
  }
  if (node == null) {
    if (this.myNode == null) {
      this.setText(null);
      return;
    }
 else {
      myNode=null;
    }
  }
 else {
    this.myNode=node;
    ModelAccess.instance().runReadAction(new Runnable(){
      public void run(){
        MainNodeChooser.this.setText(getFqName(node));
      }
    }
);
  }
  this.fireNodeChanged();
}
