{
  JComponent component=(JComponent)event.getComponent();
  Point point=component.getToolTipLocation(event);
  if (point == null) {
    point=event.getPoint();
  }
  String text=component.getToolTipText(event);
  if (text != null) {
    this.showToolTip(text,component,point);
  }
 else {
    this.hideToolTip();
  }
}
