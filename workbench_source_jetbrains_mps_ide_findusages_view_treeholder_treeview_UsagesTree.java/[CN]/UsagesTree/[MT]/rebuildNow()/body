{
  ThreadUtils.runInUIThreadAndWait(new Runnable(){
    public void run(){
      UsagesTree.super.rebuildNow();
      int i;
      for (i=0; i < getRootNode().getChildCount(); i++) {
        Object[] path={getRootNode(),getRootNode().getChildAt(i)};
        TreePath treePath=new TreePath(path);
        expandPath(treePath);
      }
    }
  }
);
}
