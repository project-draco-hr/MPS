{
  int index=myList.getSelectedIndex();
  for (  int i : myList.getSelectedIndices()) {
    if (i < index) {
      index=i;
    }
  }
  doRemove(e);
  int listSize=myList.getModel().getSize();
  if (index >= listSize) {
    index--;
  }
 else   if (index < 0 && listSize > 0) {
    index=0;
  }
  if (index > -1) {
    myList.setSelectedIndex(index);
  }
}
