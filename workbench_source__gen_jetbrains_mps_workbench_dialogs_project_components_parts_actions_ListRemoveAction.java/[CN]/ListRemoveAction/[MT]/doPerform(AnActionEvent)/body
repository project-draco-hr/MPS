{
  int index=this.myList.getSelectedIndex();
  for (  int i : this.myList.getSelectedIndices()) {
    if (i < index) {
      index=i;
    }
  }
  this.doRemove(e);
  int listSize=this.myList.getModel().getSize();
  if (index >= listSize) {
    index--;
  }
 else   if (index < 0 && listSize > 0) {
    index=0;
  }
  if (index > -1) {
    this.myList.setSelectedIndex(index);
  }
}
