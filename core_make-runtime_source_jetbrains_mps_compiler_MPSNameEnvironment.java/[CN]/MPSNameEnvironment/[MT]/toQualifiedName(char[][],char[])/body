{
  StringBuilder sb=new StringBuilder(128);
  if (packageName != null) {
    for (    char[] part : packageName) {
      sb.append(part);
      sb.append('.');
    }
    if (name == null && sb.length() > 0) {
      sb.setLength(sb.length() - 1);
    }
  }
  if (name != null) {
    sb.append(name);
  }
  return sb.toString();
}
