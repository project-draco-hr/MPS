{
  if (path == null || (path == null || path.length() == 0)) {
    return null;
  }
  try {
    path=(path.startsWith("${") ? path : new File(path).getCanonicalPath());
    path=path.replace("\\","/");
  }
 catch (  IOException ignore) {
  }
  if (addSlash && !(path.endsWith("/"))) {
    path=path + "/";
  }
  return path;
}
