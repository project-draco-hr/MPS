{
  List<File> res=new ArrayList<File>();
  for (  Module module : modules) {
    for (    VirtualFile svf : ModuleRootManager.getInstance(module).getSourceRoots()) {
      if (svf.isInLocalFileSystem()) {
        File fsf=new File(URI.create(svf.getUrl()));
        res.add(fsf);
      }
    }
  }
  return res;
}
