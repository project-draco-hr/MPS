{
  if (mySolutionSettings == null) {
    mySolutionSettings=new NewSolutionSettings((myProject != null ? myProject.getProjectFile().getParentFile().getAbsolutePath() : null)){
      @Override protected void updateSolutionLocation(){
        super.updateSolutionLocation();
        if (mySolutionSettings != null) {
          check();
        }
      }
    }
;
  }
  return mySolutionSettings;
}
