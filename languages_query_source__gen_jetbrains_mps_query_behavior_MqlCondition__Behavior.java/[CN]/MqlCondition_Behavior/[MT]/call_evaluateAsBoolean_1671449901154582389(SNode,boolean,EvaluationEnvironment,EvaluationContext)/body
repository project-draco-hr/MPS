{
  Object result=env.evaluate((left ? SLinkOperations.getTarget(thisNode,"left",true) : SLinkOperations.getTarget(thisNode,"right",true)),context,true);
  if (result instanceof Boolean) {
    return (Boolean)result;
  }
 else   if (result == null) {
    return false;
  }
 else   if (result instanceof SNode) {
    return true;
  }
  throw new EvaluationException("condition expression can handle booleans only, not " + env.getRuntime().objectType(result),thisNode,context);
}
