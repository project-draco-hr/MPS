{
  super.projectOpened();
  myTree=new DependencyTree(getProject().getComponent(MPSProjectHolder.class).getMPSProject());
  myExternalComponent=new JScrollPane(myTree){
    public void addNotify(){
      super.addNotify();
      addListeners();
    }
    public void removeNotify(){
      removeListeners();
      super.removeNotify();
    }
  }
;
  myTree.rebuildLater();
  makeAvailableLater();
}
