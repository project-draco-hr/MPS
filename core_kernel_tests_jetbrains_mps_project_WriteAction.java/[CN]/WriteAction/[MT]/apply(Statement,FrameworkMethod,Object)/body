{
  return new Statement(){
    public void evaluate() throws Throwable {
      final Throwable[] t={null};
      ModelAccess.instance().runWriteAction(new Runnable(){
        public void run(){
          try {
            base.evaluate();
          }
 catch (          Throwable throwable) {
            t[0]=throwable;
          }
        }
      }
);
      if (t[0] != null) {
        throw t[0];
      }
    }
  }
;
}
