{
  if (!file.exists()) {
    return true;
  }
  if (!file.isDirectory()) {
    return false;
  }
  if (file.isDirectory() && file.getChildren() != null && file.getChildren().isEmpty()) {
    return true;
  }
  for (  IFile child : file.getChildren()) {
    if (!deleteDirIfEmpty(child)) {
      return false;
    }
  }
  return true;
}
