{
  mySearchQuery=query;
  Thread t=new Thread(){
    public void run(){
      IAdaptiveProgressMonitor monitor=myProjectFrame.createAdaptiveProgressMonitor();
      monitor.start("find usages",10000);
      myTree.setContents(myResultProvider.getResults(mySearchQuery,monitor));
      monitor.finish();
    }
  }
;
  t.start();
  updateUI();
}
