{
  ChangeGroup changeGroup=findMessageGroupUnder(event.getPoint());
  if (changeGroup != null) {
    event.consume();
  }
  setGroupUnderMouse(changeGroup);
  if (changeGroup != null) {
    event.getComponent().setCursor(Cursor.getPredefinedCursor(Cursor.HAND_CURSOR));
  }
 else {
    event.getComponent().setCursor(null);
  }
}
