{
  ToolTipManager.sharedInstance().registerComponent(this);
  addMouseListener(new MouseAdapter(){
    public void mousePressed(    MouseEvent e){
      List<IGutterMessage> messages=getMessagesAt(e.getY());
      if (messages.size() > 0) {
        messages.get(0).doNavigate();
      }
    }
  }
);
}
