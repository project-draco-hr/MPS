{
  List<SNode> nodes=super.getNodes(condition);
  List<SNode> result=new ArrayList<SNode>();
  for (  SNode node : nodes) {
    if (SNodeOperations.isInstanceOf(node,"jetbrains.mps.baseLanguage.structure.InstanceMethodDeclaration")) {
