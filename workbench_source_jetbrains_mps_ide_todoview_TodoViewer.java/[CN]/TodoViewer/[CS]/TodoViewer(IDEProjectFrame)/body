{
  super();
  myProjectFrame=projectFrame;
  myPanel=new JPanel(new BorderLayout());
  myUsageView=new UsageView(myProjectFrame){
    public void close(){
      hideTool();
    }
  }
;
  myPanel.add(myUsageView.getComponent(),BorderLayout.CENTER);
  new Thread(new Runnable(){
    public void run(){
      MPSProject project=myProjectFrame.getProject();
      myUsageView.setRunOptions(TreeBuilder.forFinder(new TodoFinder()),new SearchQuery(new SNodePointer((SNode)null),GlobalScope.getInstance()),new ButtonConfiguration(true),new SearchResults());
      myUsageView.setCustomPlainPathProvider(new MyIPathProvider());
    }
  }
).start();
}
