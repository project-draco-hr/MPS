{
  removeAllChildren();
  for (  VirtualFile f : myFile.getChildren()) {
    if (f.exists()) {
      if (!FileTypeManager.getInstance().isFileIgnored(f.getName()) && f.isDirectory()) {
        this.add(createNode(myProject,myProvider,f));
      }
    }
  }
  for (  VirtualFile f : myFile.getChildren()) {
    if (f.exists()) {
      if (!FileTypeManager.getInstance().isFileIgnored(f.getName()) && !f.isDirectory()) {
        this.add(createNode(myProject,myProvider,f));
      }
    }
  }
  updatePresentation();
  myInitialized=true;
}
