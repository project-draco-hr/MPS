{
  if (pkg.length() == 0) {
    return this.file;
  }
  IFile fld=this.file;
  for (  final String p : pkg.split("\\.")) {
    if (p.length() == 0) {
      continue;
    }
    List<IFile> lst=fld.getChildren();
    fld=ListSequence.<IFile>fromList(lst).findFirst(new IWhereFilter<IFile>(){
      public boolean accept(      IFile f){
        return p.equals(f.getName()) && f.isDirectory();
      }
    }
);
    if (fld == null) {
      break;
    }
  }
  return fld;
}
