{
  clearHighlight();
  if (!myCells.isEmpty()) {
    myCells.clear();
  }
  if (myText.getText().length() == 0) {
    myFindResult.setText("");
    myText.setBackground(Color.white);
    if (requestFocus) {
      myText.requestFocus();
      myEditor.repaint();
    }
    return;
  }
  selectCell(requestFocus);
  updateSearchReport(myCells.size());
}
