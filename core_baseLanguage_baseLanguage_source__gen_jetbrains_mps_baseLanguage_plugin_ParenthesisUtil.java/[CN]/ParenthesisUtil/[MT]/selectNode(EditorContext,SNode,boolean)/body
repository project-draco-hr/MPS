{
  context.flushEvents();
  EditorComponent component=context.getNodeEditorComponent();
  EditorCell nodeCell=component.findNodeCell(expr);
  EditorCell cell=nodeCell.findChild((selectLastLeaf ? CellFinders.LAST_SELECTABLE_LEAF : CellFinders.FIRST_SELECTABLE_LEAF));
  if (cell != null) {
    component.changeSelection(cell);
  }
}
