              processStepEvent(context,(StepEvent)event);
            }
 else             if (event instanceof LocatableEvent) {
              processLocatableEvent(context,(LocatableEvent)event);
            }
 else {
              myContextManager.resume(context);
            }
          }
        }
      }
);
    }
