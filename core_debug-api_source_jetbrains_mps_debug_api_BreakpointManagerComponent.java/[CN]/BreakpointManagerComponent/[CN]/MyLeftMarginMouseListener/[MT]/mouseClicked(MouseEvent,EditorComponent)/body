{
  if (e.getButton() == MouseEvent.BUTTON1) {
    ModelAccess.instance().runReadAction(new Runnable(){
      @Override public void run(){
        SNode node=findDebuggableNode(editorComponent,e.getX(),e.getY());
        if (node != null) {
          toggleBreakpoint(node,false);
        }
      }
    }
);
  }
}
