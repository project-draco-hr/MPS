{
  if (ourIDEAOpenAPIJar == null) {
    try {
      String path=PathManager.getHomePath() + File.separator + "lib"+ File.separator+ "idea-platform"+ File.separator+ "platform-api.jar";
      ourIDEAOpenAPIJar=new JarFileClassPathItem(path);
    }
 catch (    IOException e) {
      throw new RuntimeException(e);
    }
  }
  return ourIDEAOpenAPIJar;
}
