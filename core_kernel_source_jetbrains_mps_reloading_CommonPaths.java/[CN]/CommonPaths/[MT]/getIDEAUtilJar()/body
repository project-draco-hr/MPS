{
  if (ourIDEAUtilJar == null) {
    try {
      String path=PathManager.getHomePath() + File.separator + "lib"+ File.separator+ "idea-platform"+ File.separator+ "util.jar";
      ourIDEAUtilJar=new JarFileClassPathItem(path);
    }
 catch (    IOException e) {
      throw new RuntimeException(e);
    }
  }
  return ourIDEAUtilJar;
}
