{
  if (ourIDEAJar == null) {
    try {
      String path=PathManager.getHomePath() + File.separator + "lib"+ File.separator+ "idea-platform"+ File.separator+ "platform-api.jar";
      ourIDEAJar=new JarFileClassPathItem(path);
    }
 catch (    IOException e) {
      throw new RuntimeException(e);
    }
  }
  return ourIDEAJar;
}
