{
  if (ourIDEAAPIJar == null) {
    try {
      String path=PathManager.getHomePath() + File.separator + "lib"+ File.separator+ "idea-platform"+ File.separator+ "platform.jar";
      ourIDEAAPIJar=new JarFileClassPathItem(path);
    }
 catch (    IOException e) {
      throw new RuntimeException(e);
    }
  }
  return ourIDEAAPIJar;
}
