{
  StringBuilder text=getDocumentText(fb);
  text.delete(offset,offset + length);
  boolean empty=text.toString().equals("");
  if (empty) {
    text.append("0");
  }
  if (isValidText(text.toString())) {
    super.remove(fb,offset,length);
    if (empty) {
      super.insertString(fb,0,"0",null);
    }
    textChanged();
  }
}
