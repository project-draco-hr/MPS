{
  if (thread == null) {
    myContext=null;
    myThread=null;
    myStackFrame=null;
  }
 else {
    myThread=thread;
    if (!myContext.suspends(thread)) {
      SuspendContext result=null;
      for (      SuspendContext context : getAllPausedContexts()) {
        if (context.suspends(thread)) {
          myContext=context;
          break;
        }
      }
    }
    updateFrame();
  }
  DebugSession.this.fireStateChanged();
}
