{
  final Runnable action=new UpdateRunnable(events);
  if (ThreadUtils.isInEDT()) {
    action.run();
  }
 else {
    getTree().rebuildTreeLater(new Runnable(){
      @Override public void run(){
        if (myProject.isDisposed())         return;
        action.run();
      }
    }
,false);
  }
}
