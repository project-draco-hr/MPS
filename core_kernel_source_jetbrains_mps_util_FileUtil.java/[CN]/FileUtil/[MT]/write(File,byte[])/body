{
  OutputStream writer=null;
  try {
    writer=new FileOutputStream(file);
    writer.write(content);
  }
 catch (  IOException e) {
    throw new RuntimeException(e);
  }
 finally {
    if (writer != null) {
      try {
        writer.close();
      }
 catch (      IOException e) {
      }
    }
  }
}
