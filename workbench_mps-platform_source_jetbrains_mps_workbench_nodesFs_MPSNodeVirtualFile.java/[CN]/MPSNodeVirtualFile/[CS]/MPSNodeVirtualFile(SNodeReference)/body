{
  myNode=nodePointer;
  SModel modelDescriptor=nodePointer.getModelReference() == null ? null : SModelRepository.getInstance().getModelDescriptor(nodePointer.getModelReference());
  if (modelDescriptor instanceof ReloadableSModelBase) {
    myTimeStamp=((ReloadableSModelBase)modelDescriptor).getSourceTimestamp();
  }
  updateFields();
}
