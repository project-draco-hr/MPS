{
  myNode=nodePointer;
  SModel modelDescriptor=nodePointer.getModelReference() == null ? null : SModelRepository.getInstance().getModelDescriptor(nodePointer.getModelReference());
  if (modelDescriptor instanceof SReloadableModelBase) {
    myTimeStamp=((SReloadableModelBase)modelDescriptor).getSourceTimestamp();
  }
  updateFields();
}
