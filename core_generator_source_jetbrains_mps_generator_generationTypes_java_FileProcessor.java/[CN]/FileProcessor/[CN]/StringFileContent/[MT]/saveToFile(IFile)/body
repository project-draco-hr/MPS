{
  OutputStreamWriter writer=null;
  try {
    writer=new OutputStreamWriter(new BufferedOutputStream(file.openOutputStream()));
    writer.write(myContent);
  }
 catch (  IOException e) {
    LOG.error(e);
  }
 finally {
    if (writer != null) {
      try {
        writer.close();
      }
 catch (      IOException ignored) {
      }
    }
  }
}
