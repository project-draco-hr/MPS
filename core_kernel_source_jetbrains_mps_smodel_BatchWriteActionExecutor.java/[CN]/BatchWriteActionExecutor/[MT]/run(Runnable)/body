{
  ModelAccess.instance().runWriteAction(new Runnable(){
    @Override public void run(){
      if (myBatchCommandLevel == 0)       onCommandStarted();
      ++myBatchCommandLevel;
      try {
        batchCommand.run();
      }
  finally {
        --myBatchCommandLevel;
        if (myBatchCommandLevel == 0)         onCommandFinished();
      }
    }
  }
);
}
