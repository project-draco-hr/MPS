{
  if (isInBatchCommand())   throw new IllegalStateException("Cannot start one batch command within another one");
  ModelAccess.instance().runWriteAction(new Runnable(){
    @Override public void run(){
      try {
        onCommandStarted();
        myInBatchCommand=true;
        batchCommand.run();
      }
  finally {
        myInBatchCommand=false;
        onCommandFinished();
      }
    }
  }
);
}
