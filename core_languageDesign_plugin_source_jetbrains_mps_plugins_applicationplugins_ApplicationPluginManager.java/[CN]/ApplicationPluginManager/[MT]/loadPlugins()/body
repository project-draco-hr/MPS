{
  mySortedPlugins=createPlugins();
  for (  BaseApplicationPlugin plugin : mySortedPlugins) {
    try {
      plugin.preInit();
    }
 catch (    Throwable t1) {
      LOG.error("Plugin " + plugin + " threw an exception during initialization ",t1);
    }
  }
  for (  BaseApplicationPlugin plugin : mySortedPlugins) {
    try {
      plugin.init();
    }
 catch (    Throwable t1) {
      LOG.error("Plugin " + plugin + " threw an exception during initialization ",t1);
    }
  }
  adjustTopLevelGroups();
  refreshCustomizations();
}
