{
  try {
    Element root=new Element("metadata");
    for (    String key : new TreeSet<String>(metadata.keySet())) {
      root.addContent(new Element(ENTRY).addContent(new Element(KEY).setText(key)).addContent(new Element(VALUE).setText(metadata.get(key))));
    }
    JDOMUtil.writeDocument(new Document(root),file);
  }
 catch (  IOException e) {
    throw new RuntimeException(e);
  }
}
