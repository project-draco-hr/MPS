{
  for (  SNode root : sm.getSModel().getRoots()) {
    updateModificationStamp(root);
  }
  SwingUtilities.invokeLater(new Runnable(){
    public void run(){
      ModelAccess.instance().runWriteAction(new Runnable(){
        public void run(){
          onModelReplaced(sm);
        }
      }
);
    }
  }
);
}
