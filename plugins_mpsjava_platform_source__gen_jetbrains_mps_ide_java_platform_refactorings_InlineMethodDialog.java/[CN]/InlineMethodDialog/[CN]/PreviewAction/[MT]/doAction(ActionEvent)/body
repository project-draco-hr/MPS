{
  final SearchResults<SNode> usages=findUssages();
  if (canExecuteRefactoring(usages)) {
    RefactoringViewAction refactoringViewAction=new RefactoringViewAction(){
      @Override public void performAction(      RefactoringViewItem item){
        item.close();
        performRefactoring(usages);
      }
    }
;
    RefactoringAccessEx.getInstance().showRefactoringView(ProjectHelper.toIdeaProject(myOperationContext.getProject()),refactoringViewAction,usages,false,"refactoring");
  }
  close(DialogWrapper.OK_EXIT_CODE);
}
