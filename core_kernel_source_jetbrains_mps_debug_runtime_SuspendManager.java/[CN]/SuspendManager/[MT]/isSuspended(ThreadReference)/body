{
  boolean suspended=false;
  if (isFrozen(thread)) {
    suspended=true;
  }
 else {
    for (    SuspendContext suspendContext : myEventContexts) {
      if (suspendContext.suspends(thread)) {
        suspended=true;
        break;
      }
    }
  }
  return suspended && (thread == null || thread.isSuspended());
}
