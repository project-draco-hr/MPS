{
  super(debugSession);
  myDebugSession=debugSession;
  if (thread == null) {
    myContext=null;
    myThread=null;
    myStackFrameIndex=NO_FRAME;
  }
 else {
    myThread=thread;
    myContext=findContext(previousState);
    LOG.assertLog(myContext != null);
    myStackFrameIndex=findStackFrameIndex();
  }
}
