{
switch ((comps == null ? 0 : comps.size())) {
case 0:
    return DockLayout.ZERO;
case 1:
  return this.size(comps.get(0),pref);
default :
Dimension res=new Dimension(0,0);
for (Component cmp : comps) {
Dimension dim=(pref ? cmp.getPreferredSize() : cmp.getMinimumSize());
res.width+=dim.width;
res.height+=dim.height;
}
return res;
}
}
