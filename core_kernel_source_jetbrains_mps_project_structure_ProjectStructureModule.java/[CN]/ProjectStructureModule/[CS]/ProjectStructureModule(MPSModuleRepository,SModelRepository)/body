{
  setModuleReference(MODULE_REFERENCE);
  repository.addRepositoryListener(new MPSModuleRepositoryListener(){
    @Override public void repositoryChanged(){
      refresh();
    }
  }
);
  repository.addModuleRepositoryListener(new ModuleRepositoryListener(){
    @Override public void moduleAdded(    IModule module){
      refresh();
    }
    @Override public void beforeModuleRemoved(    IModule module){
    }
    @Override public void moduleRemoved(    IModule module){
      refresh();
    }
    @Override public void moduleInitialized(    IModule module){
    }
    @Override public void moduleChanged(    IModule module){
      unloadFor(module);
    }
  }
);
}
