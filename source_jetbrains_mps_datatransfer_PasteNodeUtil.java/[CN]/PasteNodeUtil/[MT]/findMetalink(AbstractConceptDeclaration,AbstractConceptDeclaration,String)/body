{
  for (  LinkDeclaration metalink : new ConceptHierarchyScope(sourceMetatype).getAdapters(LinkDeclaration.class)) {
    if (SModelUtil_new.isAssignableConcept(targetMetatype,metalink.getTarget()) && (role == null || metalink.getRole().equals(role))) {
      return metalink;
    }
  }
  return null;
}
