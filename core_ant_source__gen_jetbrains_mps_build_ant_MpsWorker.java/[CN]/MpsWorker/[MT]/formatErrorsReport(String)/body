{
  StringBuffer sb=new StringBuffer();
  for (int i=0; i < 100; i++) {
    sb.append('*');
  }
  sb.append("\n");
  sb.append(myErrors.size());
  sb.append(" errors during " + taskName + ":\n");
  for (  String error : myErrors) {
    sb.append(error);
    sb.append("\n");
  }
  for (int i=0; i < 100; i++) {
    sb.append('*');
  }
  return sb;
}
