{
  StringBuffer sb=new StringBuffer();
  sb.append(StringUtils.repeat("*",100));
  sb.append("\n");
  sb.append(myErrors.size());
  sb.append(" errors during " + taskName + ":\n");
  for (  String error : myErrors) {
    sb.append(error);
    sb.append("\n");
  }
  sb.append(StringUtils.repeat("*",100));
  return sb;
}
