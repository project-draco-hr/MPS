{
  if (isVariable(node)) {
    return true;
  }
  for (  SNode child : node.getChildren()) {
    if (hasVariablesInside(child)) {
      return true;
    }
  }
  for (  SNode referent : node.getReferents()) {
    if (referent != null && referent.getConceptFqName().equals(RuntimeTypeVariable.concept)) {
      return true;
    }
  }
  return false;
}
