{
  new Thread(){
{
      setDaemon(true);
    }
    public void run(){
      if (IdeMain.isTestMode())       return;
      try {
        while (true) {
          doUpdate();
          Thread.sleep(300);
        }
      }
 catch (      Exception e) {
        e.printStackTrace();
      }
    }
  }
.start();
}
