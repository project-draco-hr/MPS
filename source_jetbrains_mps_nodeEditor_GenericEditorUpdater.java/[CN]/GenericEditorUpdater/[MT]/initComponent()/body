{
  new Thread(){
{
      setDaemon(true);
    }
    public void run(){
      if (IdeMain.isTestMode())       return;
      CommandProcessor commandProcessor=CommandProcessor.instance();
      try {
        while (true) {
          while (commandProcessor.isInsideCommand()) {
            Thread.sleep(200);
          }
          doUpdate();
          if (myStopThread) {
            break;
          }
          Thread.sleep(300);
        }
      }
 catch (      Exception e) {
        e.printStackTrace();
      }
    }
  }
.start();
}
