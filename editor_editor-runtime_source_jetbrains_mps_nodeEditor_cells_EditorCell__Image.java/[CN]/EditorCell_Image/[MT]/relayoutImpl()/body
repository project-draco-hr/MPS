{
  if (myImage == null)   return;
  if (myAlignment == ImageAlignment.justify) {
    int width=myImage.getWidth(mySizeObserver);
    if (width != -1) {
      myWidth=width;
    }
    int height=myImage.getHeight(mySizeObserver);
    if (height != -1) {
      myHeight=height;
    }
  }
  if (myDescent < 0) {
    myDescent=getFontMetrics().getDescent();
  }
}
