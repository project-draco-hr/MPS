{
  if (myIcon == null)   return;
  if (myAlignment == ImageAlignment.justify) {
    int width=myIcon.getIconWidth();
    if (width != -1) {
      myWidth=width;
    }
    int height=myIcon.getIconHeight();
    if (height != -1) {
      myHeight=height;
    }
  }
  if (myDescent < 0) {
    myDescent=getFontMetrics().getDescent();
  }
}
