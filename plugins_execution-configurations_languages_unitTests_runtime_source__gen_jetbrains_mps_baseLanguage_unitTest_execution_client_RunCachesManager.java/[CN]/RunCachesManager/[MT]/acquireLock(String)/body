{
synchronized (ourLock) {
    try {
      File newDir=new File(path).getCanonicalFile();
      for (      File dir : ourDirectories) {
        if (isChild(dir,newDir) || isChild(newDir,dir)) {
          return false;
        }
      }
      return ourDirectories.add(newDir);
    }
 catch (    IOException e) {
      e.printStackTrace();
      return false;
    }
  }
}
