{
  MockWidget.EventHandlers hdlrs=(MapSequence.fromMap(this.eventHandlers).containsKey(event) ? MapSequence.<String,MockWidget.EventHandlers>fromMap(this.eventHandlers).get(event) : new MockWidget.EventHandlers(event));
  MapSequence.<String,MockWidget.EventHandlers>fromMap(this.eventHandlers).put(event,hdlrs);
  hdlrs.add(hdlr);
}
