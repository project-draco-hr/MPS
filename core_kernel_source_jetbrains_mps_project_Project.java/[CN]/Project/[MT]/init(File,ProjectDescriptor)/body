{
  isDisposed=false;
  ModelAccess.instance().runWriteAction(new Runnable(){
    public void run(){
      myProjectFile=projectFile;
      myProjectDescriptor=projectDescriptor;
      myScope=new ProjectScope();
      readModules();
      for (      IModule m : getModules()) {
        m.onModuleLoad();
      }
    }
  }
);
}
