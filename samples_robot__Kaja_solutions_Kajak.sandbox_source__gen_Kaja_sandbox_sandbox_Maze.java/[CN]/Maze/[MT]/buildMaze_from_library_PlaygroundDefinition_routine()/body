  }
  if (isAllowedRow(5) && isAllowedCol(1)) {
    if (!(isFull(5,1))) {
      addMark(5,1);
      minipause();
    }
 else {
      reportError("Cannot drop. The cell is already full.");
      return;
    }
  }
 else {
    reportError("Attempted to drop marks outside of the playground!");
  }
