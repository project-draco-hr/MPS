{
  if (file == null)   return null;
  InputStream is=null;
  try {
    is=file.openInputStream();
    return isText ? hashText(new InputStreamReader(is,FileUtil.DEFAULT_CHARSET)) : hash(is);
  }
 catch (  IOException e) {
  }
 finally {
    if (is != null) {
      try {
        is.close();
      }
 catch (      IOException e) {
      }
    }
  }
  return null;
}
