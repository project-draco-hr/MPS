{
  if (context.getMenuLocation().equals(MenuLocations.SUBSTITUTE)) {
    return Collections.singletonList(new IncludeSubstituteMenuTransformationMenuPart(){
      @Override protected SNode getParentNode(      TransformationMenuContext context){
        return context.getNode();
      }
      @Override protected SContainmentLink getContainmentLink(      TransformationMenuContext context){
        return myLink;
      }
      @Override protected SNode getCurrentChild(      TransformationMenuContext context){
        return null;
      }
    }
);
  }
  return new ArrayList<>();
}
