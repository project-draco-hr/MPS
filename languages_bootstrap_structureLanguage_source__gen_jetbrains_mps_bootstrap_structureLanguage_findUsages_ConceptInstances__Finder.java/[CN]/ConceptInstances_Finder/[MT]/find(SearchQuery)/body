{
  SearchResults global_results=new SearchResults();
{
    List<SNode> resNodes=FindUsagesManager.getInstance().findInstances(searchQuery.getNodePointer().getNode(),searchQuery.getScope());
    for (    SNode node : resNodes) {
      global_results.getSearchResults().add(new SearchResult(new SNodePointer(node),"Concept Instances"));
    }
    global_results.getSearchedNodePointers().add(new SNodePointer(searchQuery.getNodePointer().getNode()));
  }
  return global_results;
}
