{
  final int tabNum=addTab(tab);
  if (shortcut != null) {
    registerKeyboardAction(new AbstractAction(){
      public void actionPerformed(      ActionEvent e){
        selectTab(tabNum);
      }
    }
,KeyStroke.getKeyStroke("alt shift " + shortcut),JComponent.WHEN_ANCESTOR_OF_FOCUSED_COMPONENT);
  }
}
