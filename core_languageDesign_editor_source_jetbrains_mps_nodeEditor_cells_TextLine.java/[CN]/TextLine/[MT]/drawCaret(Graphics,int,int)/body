{
  if (!myCaretEnabled) {
    return;
  }
  int x=getCaretX(shiftX);
  g.setColor(Color.BLACK);
  g.drawLine(x,shiftY,x,shiftY + myTextHeight);
  if (getCaretPosition() == 0) {
    g.drawLine(x + 1,shiftY,x + 1,shiftY + myTextHeight);
  }
 else {
    g.drawLine(x - 1,shiftY,x - 1,shiftY + myTextHeight);
  }
  g.setPaintMode();
}
