{
  Language language=SModelUtil.getDeclaringLanguage(conceptDeclaration);
  if (language != null) {
    String iconPath=MacrosFactory.forModuleFile(language.getDescriptorFile()).expandPath(path);
    if (iconPath != null) {
      Icon icon=loadIcon(iconPath,true);
      if (icon != null) {
        return icon;
      }
    }
  }
  return null;
}
