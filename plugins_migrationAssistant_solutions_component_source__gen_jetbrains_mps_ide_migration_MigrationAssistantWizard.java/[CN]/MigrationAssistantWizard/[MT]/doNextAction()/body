{
  super.doNextAction();
  final Runnable task=((MigrationStep)getCurrentStepObject()).getAutostartTask();
  if (task == null) {
    return;
  }
  ApplicationManager.getApplication().executeOnPooledThread(new Runnable(){
    public void run(){
      task.run();
      SwingUtilities.invokeLater(new Runnable(){
        public void run(){
          updateStep();
        }
      }
);
    }
  }
);
}
