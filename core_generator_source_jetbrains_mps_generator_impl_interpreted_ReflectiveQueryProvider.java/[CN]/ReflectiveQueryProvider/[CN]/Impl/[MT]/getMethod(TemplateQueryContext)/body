{
  QueryMethod<Boolean> m=myMethod;
  if (m == null) {
    try {
      m=createMethod();
    }
 catch (    NoSuchMethodException|ClassNotFoundException e) {
      ctx.showWarningMessage(null,String.format("cannot find condition method '%s' : evaluate to %s",myMethodName,String.valueOf(myDefValue).toUpperCase()));
    }
    if (m == null) {
      m=new QueryMethod<Boolean>(){
        @Override public Boolean invoke(        Object contextObject){
          return myDefValue;
        }
      }
;
    }
    myMethod=m;
  }
  return m;
}
