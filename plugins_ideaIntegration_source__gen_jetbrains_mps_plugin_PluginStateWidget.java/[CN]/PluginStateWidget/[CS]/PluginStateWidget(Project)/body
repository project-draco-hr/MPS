{
  myProject=project;
  myTimer=new PluginStateWidget.MyTimer(new ActionListener(){
    @Override public void actionPerformed(    ActionEvent e){
      if (myConnecting) {
        return;
      }
      myConnecting=true;
      try {
        ApplicationManager.getApplication().executeOnPooledThread(new Runnable(){
          @Override public void run(){
            try {
              tick();
            }
  finally {
              myConnecting=false;
            }
          }
        }
);
      }
 catch (      Throwable t) {
        LOG.error(t);
        myConnecting=false;
      }
    }
  }
);
}
