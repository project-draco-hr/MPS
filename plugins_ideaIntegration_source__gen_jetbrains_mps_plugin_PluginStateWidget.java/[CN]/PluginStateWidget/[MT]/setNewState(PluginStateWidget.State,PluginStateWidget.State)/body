{
  if (myState.compareAndSet(oldState,newState)) {
    myTimer.setNewDelay(myState.get().getDefaultDelay());
    ApplicationManager.getApplication().invokeLater(new Runnable(){
      @Override public void run(){
        myStatusBar.updateWidget(ID());
      }
    }
);
    return true;
  }
  return false;
}
