{
  return new IDebuggerConfiguration(){
    @Override public IDebuggerSettings createDebuggerSettings(){
      return new LocalConnectionSettings(true);
    }
    @Override public IDebugger getDebugger(){
      return new DefaultDebugger(){
        @NotNull @Override public AbstractDebugSessionCreator createDebugSessionCreator(        @NotNull Project project){
          return BaseRunProfileState.this.createDebugSessionCreator(project);
        }
      }
;
    }
  }
;
}
