{
  SNode concept=referenceNode.getConcept().getDeclarationNode();
  SNode scopeReference=SModelSearchUtil.findLinkDeclaration(concept,role);
  if (scopeReference == null) {
    return new ErrorReferenceDescriptor("can't find link for role '" + role + "' in '"+ referenceNode.getConcept().getQualifiedName()+ "'");
  }
  return new OkReferenceDescriptor(concept,SModelUtil.getGenuineLinkRole(scopeReference),reference != null,role,0,referenceNode,SModelUtil.getLinkDeclarationTarget(scopeReference),referenceNode.getParent(),new SNodeLegacy(referenceNode).getRoleLink(),reference);
}
