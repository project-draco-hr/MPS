{
  ModelAccess.assertLegalRead();
  SNode scopeReference=referenceNode.getLinkDeclaration(role);
  if (scopeReference == null) {
    return new ErrorReferenceDescriptor("can't find link for role '" + role + "' in '"+ referenceNode.getConcept().getId()+ "'");
  }
  SNode concept=referenceNode.getConceptDeclarationNode();
  return new OkReferenceDescriptor(null,concept,referenceNode.getParent(),referenceNode,role,SModelUtil.getGenuineLinkRole(scopeReference),0,SModelUtil.getLinkDeclarationTarget(scopeReference),referenceNode.getRoleLink());
}
