{
  Control prev=null;
  Control next=null;
  for (int z=pos; z >= 0; --z) {
    if ((prev=matrix.get(z)) != null) {
      control.moveBelow(prev);
      break;
    }
  }
  if (prev == null) {
    for (int a=pos; a < matrix.size(); ++a) {
      if ((next=matrix.get(a)) != null) {
        control.moveAbove(next);
        break;
      }
    }
  }
  return next != null || prev != null;
}
