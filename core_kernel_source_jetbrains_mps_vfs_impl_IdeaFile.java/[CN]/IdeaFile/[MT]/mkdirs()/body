{
  if (findVirtualFile()) {
    return myVirtualFile.isDirectory();
  }
 else {
    performWriteRoutines(new Runnable(){
      @Override public void run(){
        try {
          myVirtualFile=VfsUtil.createDirectories(myPath);
          myPath=null;
        }
 catch (        IOException e) {
          e.printStackTrace();
        }
      }
    }
);
    return true;
  }
}
