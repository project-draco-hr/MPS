{
  if (!getWriteLock().tryLock()) {
    return false;
  }
  getWriteLock().unlock();
  return ApplicationManager.getApplication().runReadAction(new Computable<Boolean>(){
    public Boolean compute(){
      if (getWriteLock().tryLock()) {
        try {
          r.run();
        }
  finally {
          getWriteLock().unlock();
        }
        return true;
      }
 else {
        return false;
      }
    }
  }
);
}
