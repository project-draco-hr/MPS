{
  if (canRead()) {
    r.run();
    return;
  }
  if (mySharedReadInWriteMode) {
    try {
      mySharedReadInWriteLock.readLock().lock();
      r.run();
    }
  finally {
      mySharedReadInWriteLock.readLock().unlock();
    }
    return;
  }
  ApplicationManager.getApplication().runReadAction(new Runnable(){
    public void run(){
      getReadLock().lock();
      try {
        r.run();
      }
  finally {
        getReadLock().unlock();
      }
    }
  }
);
}
