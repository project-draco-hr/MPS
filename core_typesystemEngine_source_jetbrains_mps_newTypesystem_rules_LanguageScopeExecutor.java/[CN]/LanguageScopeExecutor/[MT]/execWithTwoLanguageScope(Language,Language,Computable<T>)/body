{
  if (lang1 == null || lang2 == null)   return execWithLanguageScope(lang1 != null ? lang1 : lang2,computable);
  LanguageScope languageScope=LanguageScopeFactory.getInstance().getLanguageScope(LanguageDependenciesManager.getAllExtendedLanguageReferences(lang1),LanguageDependenciesManager.getAllExtendedLanguageReferences(lang2));
  try {
    LanguageScope.pushCurrent(languageScope,computable);
    return computable.compute();
  }
  finally {
    LanguageScope.popCurrent(languageScope,computable);
  }
}
