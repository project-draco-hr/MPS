{
  LanguageScope languageScope=lang == null ? LanguageScope.getGlobal() : LanguageScopeFactory.getInstance().getLanguageScope(new LanguageDependenciesManager(lang).getAllExtendedLanguages());
  try {
    LanguageScope.pushCurrent(languageScope,computable);
    return computable.compute();
  }
  finally {
    LanguageScope.popCurrent(languageScope,computable);
  }
}
