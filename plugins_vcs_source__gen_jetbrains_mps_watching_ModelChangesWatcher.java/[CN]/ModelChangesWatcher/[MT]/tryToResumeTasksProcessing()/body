{
synchronized (myLock) {
    myBans--;
    if (myBans != 0) {
      return;
    }
    if (myReloadSession == null) {
      return;
    }
    for (    Project project : myProjectManager.getOpenProjects()) {
      if (project.getComponent(ProjectLevelVcsManager.class).isBackgroundVcsOperationRunning()) {
        return;
      }
    }
  }
  SwingUtilities.invokeLater(new Runnable(){
    public void run(){
      myTimer.resume();
    }
  }
);
}
