{
  IFile container=null;
  for (  String p : path.split("!")) {
    if (container == null) {
      container=OldFileSystem.getFile((this.isJar(p) ? p + "!/" : p));
    }
 else {
      File cf=asFile(OldFileSystem.getFile(container.getAbsolutePath() + p));
      container=OldFileSystem.getFile(cf.getPath() + "!/");
    }
  }
  this.file=container;
}
