{
  if (!myFile.exists()) {
    removeFromParent();
    return;
  }
  setText(myFile.getName());
  if (myShowFullPath) {
    setAdditionalText(myFile.getPresentableUrl());
  }
  setNodeIdentifier(myFile.getPath() != null ? myFile.getPath() : "");
  setColor(myProvider.getFileStatus(myFile).getColor());
}
