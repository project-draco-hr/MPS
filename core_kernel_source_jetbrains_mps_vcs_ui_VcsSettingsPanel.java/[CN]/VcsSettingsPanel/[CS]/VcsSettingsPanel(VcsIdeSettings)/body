{
  super(new VerticalFlowLayout(true,false));
  mySettings=settings;
  myVcsRootsPanel=new EnumPanel(new String[]{VcsRootsDiscoveryPolicy.ADD.name(),VcsRootsDiscoveryPolicy.NOTIFY.name(),VcsRootsDiscoveryPolicy.DO_NOTING.name()},new String[]{"Add to project vcs directory mappings","Show notification","Do nothing"},"When new vcs roots discovered"){
    @Override public String getSettingsValue(){
      return settings.getDiscoverVcsRoots();
    }
    @Override public void setSettingsValue(    String value){
      settings.setDiscoverVcsRoots(value);
    }
  }
;
  JPanel diffPanel=new JPanel(new BorderLayout());
  diffPanel.setBorder(new TitledBorder("Differences view"));
  myTextModeDifferenceCheckBox=new JCheckBox("Use text diff for models",mySettings.getTextModeEnabled());
  diffPanel.add(myTextModeDifferenceCheckBox);
  add(myVcsRootsPanel);
  add(diffPanel);
}
