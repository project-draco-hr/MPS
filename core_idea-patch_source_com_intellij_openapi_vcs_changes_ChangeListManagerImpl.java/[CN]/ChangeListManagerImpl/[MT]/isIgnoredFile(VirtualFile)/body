{
  VirtualFile currentFile=file;
  while (currentFile != null) {
    if (".svn".equals(currentFile.getName())) {
      return true;
    }
    if (ProjectRootManager.getInstance(myProject) != null && ProjectRootManager.getInstance(myProject).getFileIndex().isIgnored(file)) {
      return true;
    }
    currentFile=currentFile.getParent();
  }
  return myIgnoredIdeaLevel.isIgnoredFile(file);
}
