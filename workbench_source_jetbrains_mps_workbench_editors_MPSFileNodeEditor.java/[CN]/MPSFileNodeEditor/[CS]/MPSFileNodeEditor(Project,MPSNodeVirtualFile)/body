{
  CommandProcessor.instance().executeLightweightCommand(new Runnable(){
    public void run(){
      myFile=file;
      MPSProject mpsProject=project.getComponent(MPSProjectHolder.class).getMPSProject();
      SModelDescriptor sm=file.getNode().getModel().getModelDescriptor();
      myNodeEditor=project.getComponent(MPSEditorOpener.class).createEditorFor(new ModuleContext(sm.getModule(),mpsProject),file.getNode());
    }
  }
);
}
