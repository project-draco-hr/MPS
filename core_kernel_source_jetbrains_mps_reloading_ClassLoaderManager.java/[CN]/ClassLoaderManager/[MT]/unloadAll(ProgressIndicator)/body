{
  LOG.assertCanWrite();
  indicator.pushState();
  try {
    indicator.setIndeterminate(true);
    indicator.setText("Reloading classes...");
    indicator.setText2("Disposing old classes...");
    callListeners(new ListenerCaller(){
      public void call(      ReloadListener l){
        l.unload();
      }
    }
);
  }
  finally {
    indicator.popState();
  }
}
