{
  if (myHandlers == null) {
    myHandlers=new Listeners<EventHandler<? super PropertyChangeEvent<T>>>();
  }
  final Registration registration=myHandlers.add(handler);
  return new Registration(){
    public void remove(){
      registration.remove();
      if (myHandlers.isEmpty()) {
        myHandlers=null;
      }
    }
  }
;
}
