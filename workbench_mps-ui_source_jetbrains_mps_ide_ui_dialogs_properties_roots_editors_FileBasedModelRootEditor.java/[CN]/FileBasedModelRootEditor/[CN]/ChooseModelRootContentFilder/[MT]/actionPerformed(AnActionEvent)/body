{
  VirtualFile[] files=FileChooser.chooseFiles(myDescriptor,null,null,VirtualFileManager.getInstance().findFileByUrl(VirtualFileManager.constructUrl("file",((FileBasedModelRoot)myFileBasedModelRootEntry.getModelRoot()).getContentRoot())));
  if (files.length != 1)   return;
  ((FileBasedModelRoot)FileBasedModelRootEditor.this.myFileBasedModelRootEntry.getModelRoot()).setContentRoot(files[0].getPath());
  FileBasedModelRootEditor.this.setRoot(files[0]);
  FileBasedModelRootEditor.this.myTree.updateUI();
}
