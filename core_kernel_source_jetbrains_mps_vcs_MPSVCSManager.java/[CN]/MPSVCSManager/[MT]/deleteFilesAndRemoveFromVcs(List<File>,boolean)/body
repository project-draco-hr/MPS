{
  if (files.size() == 0)   return;
  if (!isProjectUnderVcs()) {
    for (    File f : files) {
      f.delete();
    }
    return;
  }
  myTasksQueue.invokeLater(new Runnable(){
    public void run(){
      perform(new RemoveOperation(files,myManager,myProject,myRemoveOption,silently));
    }
  }
);
  return;
}
