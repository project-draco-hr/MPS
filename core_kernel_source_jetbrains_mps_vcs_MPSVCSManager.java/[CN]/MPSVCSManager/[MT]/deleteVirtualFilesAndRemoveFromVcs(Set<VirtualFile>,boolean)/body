{
  if (files.size() == 0)   return;
  if (!isProjectUnderVcs()) {
    for (    VirtualFile f : files) {
      try {
        f.delete(this);
      }
 catch (      IOException e) {
        LOG.error("Error while deleting file " + f + "\n",e);
      }
    }
    return;
  }
  myRemoveOperationScheduler.invokeLater(new RemoveOperation(files,myManager,myProject,myRemoveOption,silently));
  return;
}
