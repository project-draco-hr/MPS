{
  invokeLater(new Runnable(){
    public void run(){
      ApplicationManager.getApplication().runReadAction(new Runnable(){
        public void run(){
          for (          VirtualFile vfile : inVCS) {
            if (vfile != null) {
              scheduleMissingFileInternal(vfile);
            }
          }
        }
      }
);
    }
  }
);
}
