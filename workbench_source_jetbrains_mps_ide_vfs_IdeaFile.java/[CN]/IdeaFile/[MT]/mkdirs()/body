{
  ApplicationManager.getApplication().assertWriteAccessAllowed();
  if (findVirtualFile()) {
    return myVirtualFile.isDirectory();
  }
 else {
    try {
      myVirtualFile=VfsUtil.createDirectories(myPath);
      myPath=null;
      return true;
    }
 catch (    IOException e) {
      return false;
    }
  }
}
