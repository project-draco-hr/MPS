{
  myLock.writeLock().lock();
  try {
    myListeners.remove(listener);
    if (myListeners.isEmpty()) {
      for (      PathListener pathListener : myPaths.values()) {
        FileSystem.getInstance().removeListener(pathListener);
      }
    }
  }
  finally {
    myLock.writeLock().unlock();
  }
}
