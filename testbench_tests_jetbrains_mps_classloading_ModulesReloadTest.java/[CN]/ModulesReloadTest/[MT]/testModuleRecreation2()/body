{
  final Language[] l=new Language[1];
  myAccess.runWriteAction(new Runnable(){
    @Override public void run(){
      l[0]=createLanguage();
      addClassTo(l[0]);
      l[0].reload();
      Assert.assertTrue(classIsLoadableFromModule(l[0]));
      removeModule(l[0]);
    }
  }
);
  Assert.assertTrue(l[0].getClassLoader() == null);
}
