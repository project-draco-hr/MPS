{
synchronized (myLock) {
    if (myTasks.isEmpty()) {
      myLock.notifyAll();
    }
    myTasks.offer(new Task(){
      @Override public boolean tryRun() throws TaskIsOutdated {
        return myModelAccess.tryWrite(r);
      }
      @Override public boolean needsWrite(){
        return true;
      }
    }
);
  }
}
