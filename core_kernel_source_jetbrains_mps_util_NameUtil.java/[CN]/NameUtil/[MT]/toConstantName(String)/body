{
  if (s == null) {
    return s;
  }
  if (s.length() == 0) {
    return s;
  }
  StringBuffer sb=new StringBuffer();
  for (int i=0; i < s.length(); i++) {
    char c=s.charAt(i);
    if (Character.isUpperCase(c) && i > 0) {
      sb.append('_');
    }
    sb.append(Character.toUpperCase(c));
  }
  return sb.toString();
}
